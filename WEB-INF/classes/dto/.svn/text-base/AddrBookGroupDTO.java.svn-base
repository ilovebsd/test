      xml += blank+"            </AddressGroup> \n" ;
      
   return xml ;
   }	
    
	/*
	 * XML 특수문자 변한 (", \', <, >, &)
	 */ 	
	 public String toXMLChangeString(String xmlTemp){
		  String strTemp = xmlTemp;
		  
		  CharBuffer cb = CharBuffer.wrap(strTemp);
		  String xmlString = "";
		  while(cb.hasRemaining()){
			   char tempChar = cb.get();
		   
			   if( tempChar == '"' ){
				   xmlString += "&quot;";
			   }else if( tempChar == '&' ){
				   xmlString += "&amp;";
			   }else if( tempChar == '\'' ){
				   xmlString += "&apos;";
			   }else if( tempChar == '<' ){
				   xmlString += "&lt;";
			   }else if( tempChar == '>' ){
				   xmlString += "&gt;";
			   }else{
				   xmlString += tempChar;
			   }
		  }
		  return xmlString ;
	 }
	 
