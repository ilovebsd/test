	public String toXmlString(String parent, String blank) {

//       String represent = getPhoneNum();
//       if( represent.equals("")){
//           represent = getMobile(); 
//       }

       String xml = blank+"            <Address " ;
       xml += " OwnerId=\"" + parent + "\" " ; 
       xml += " OwnerName=\"" + getOwnerName() + "\" " ; 
       xml += " CommonType=\"" + getCommon() + "\" >\n" ; 

       xml += blank+"                <SerialNo>" + getAddrID() + "</SerialNo>\n" ;
       xml += blank+"                <Name>" + toXMLChangeString(getName()) + "</Name>\n" ;
       xml += blank+"                <Company>" + toXMLChangeString(getCompany()) + "</Company>\n" ;
       xml += blank+"                <Department>" + toXMLChangeString(getDepartment()) + "</Department>\n" ;
       xml += blank+"                <Position>" + toXMLChangeString(getPosition()) + "</Position>\n" ;
       xml += blank+"                <MailAddress>" + toXMLChangeString(getMailAddress()) + "</MailAddress>\n" ;
       xml += blank+"                <KeyNumber>" + getKeyNumber()+ "</KeyNumber>\n" ;
       xml += blank+"                <Mobile>" + getMobile()+ "</Mobile>\n" ;
       xml += blank+"                <HomeNumber>"  +  getPhoneNum()+ "</HomeNumber>\n" ;
       xml += blank+"                <HomeAddress>" + toXMLChangeString(getAddress()) + "</HomeAddress>\n" ;
       xml += blank+"                <CompanyNumber>" + getCompanyNumber() + "</CompanyNumber>\n" ;
       xml += blank+"                <CompanyAddress>" + toXMLChangeString(getCompanyAddress()) + "</CompanyAddress>\n" ;
       xml += blank+"                <HomePage>" + toXMLChangeString(getHomePage()) + "</HomePage>\n" ;
       xml += blank+"                <Introduction >" + getIntroduction() + "</Introduction >\n" ;
       xml += blank+"                <Fax>" + getFax() + "</Fax>\n" ;
       xml += blank+"                <Birthday>" + getBirthday() + "</Birthday>\n" ;
       xml += blank+"                <CreateDate>" + getCreateDate() + "</CreateDate>\n" ;
       xml += blank+"                <EditDate>" + getEditDate() + "</EditDate>\n" ;
       xml += blank+"                <SharedDate>" + getSharedDate() + "</SharedDate>\n" ;
       if(getCommon() == 1){
    	   if("".equals(getSharedOwnerID())){
    	       xml += blank+"                <SharedGroupID></SharedGroupID>\n" ;
    	   }else{
    	       xml += blank+"                <SharedGroupID>" + getSharedGroupID() + "</SharedGroupID>\n" ;
    	   }
           xml += blank+"                <SharedGroupName>" + getSharedGroupName() + "</SharedGroupName>\n" ;
       }
       xml += blank+"                <Memo>" + getMemo() + "</Memo>\n" ;
       xml += blank+"            </Address> \n" ;
       
    return xml ;
    }
	
	/*
	 * XML 특수문자 변한 (", \', <, >, &)
	 */ 	
	 public String toXMLChangeString(String xmlTemp){
		  String strTemp = xmlTemp;
		  
		  CharBuffer cb = CharBuffer.wrap(strTemp);
		  String xmlString = "";
		  while(cb.hasRemaining()){
			   char tempChar = cb.get();
		   
			   if( tempChar == '"' ){
				   xmlString += "&quot;";
			   }else if( tempChar == '&' ){
				   xmlString += "&amp;";
			   }else if( tempChar == '\'' ){
				   xmlString += "&apos;";
			   }else if( tempChar == '<' ){
				   xmlString += "&lt;";
			   }else if( tempChar == '>' ){
				   xmlString += "&gt;";
			   }else{
				   xmlString += tempChar;
			   }
		  }
		  return xmlString ;
	 }	
