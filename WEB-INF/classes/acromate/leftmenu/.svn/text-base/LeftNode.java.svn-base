public class LeftNode extends DefaultMutableTreeNode {
  String text;

  boolean selected;
  boolean halfSelected = false;
  String groupID = "";
  String clusterID = "SSW";
  public String authValue = "";

  public LeftNode(String authValue , String text, boolean selected) {
      super.setUserObject(text);
      this.authValue = authValue ;
      this.text = text;
      this.selected = selected;
  }

  public LeftNode(String authValue , String text) {
    this(authValue, text, false);
  }

  public boolean isSelected() {
    return selected;
  }

  public void setSelected(boolean newValue) {
    selected = newValue;
  }

  public String getText() {
    return text;
  }

  public void setText(String newValue) {
    text = newValue;
  }

  public String getSystemPath() {
    return Str.cover(clusterID) + ".active" ;
  }

  public void setGroupID(String groupID) {
    this.groupID = groupID ;
  }

  public String getGroupID() {
    return groupID ;
  }

  public void setClusterID(String clusterID) {
    this.clusterID = clusterID ;
  }

  public String getClusterID() {
    return clusterID ;
  }

  public String toString() {
    return text;
  }

  public String getMenuString() {
    return super.toString();
  }

  public String getAuthValue() {
    return authValue;
  }

  public void setHalfSelected(boolean hSelected) {
    this.halfSelected = hSelected;
  }

  public boolean getHalfSelected() {
    return halfSelected;
  }
}
