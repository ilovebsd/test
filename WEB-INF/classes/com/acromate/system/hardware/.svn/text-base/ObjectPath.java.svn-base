package com.acromate.system.hardware;

import com.acromate.util.Logger;
import com.acromate.data.DataIO;
import com.acromate.system.ManSystem;

public class ObjectPath extends DataIO {
    private Logger log = Logger.getLogger(this.getClass());

    private int          errorcode;
    private StringBuilder path;

    public ObjectPath() {
        this.path    = new StringBuilder();
    }

    public String getClassID() {
        return path.toString();
    }

    protected int setFieldData(String field, String value) {
        StringBuilder temp = new StringBuilder(field);
        if(compareFieldID(temp, "path") == true) {
            return setString(path, value);
        }
        log.error("objectPath - Not founded field :" + field);
        return (-1);
    }

    protected int getFieldData(String field, Index idx, StringBuilder value) {
        boolean resultVal = false;
        StringBuilder fldAlias;
        if(field != null && !field.equals("")) resultVal = true;
        if(field == null) {
            fldAlias = new StringBuilder(); fldAlias.append("");
        } else {
           fldAlias  = new StringBuilder(); fldAlias.append(field);
        }
        if(compareFieldID(fldAlias, "path", idx, value) == true) {
            errorcode = getString(path.toString(), value, !resultVal);
            if(resultVal || errorcode < 0) return errorcode;
        }
        return(0);
    }
}
