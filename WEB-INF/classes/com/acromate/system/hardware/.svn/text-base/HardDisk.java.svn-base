package com.acromate.system.hardware;

import com.acromate.data.DataIO;
import com.acromate.data.ListIO;
import com.acromate.util.Logger;
import com.acromate.system.ManSystem;
import java.util.ArrayList;

/**
 *
 * @author 아크로메이트 기술연구소
 * @version 2.0.0
 */


public class HardDisk extends ListIO {

    /**
     * Create new class instance
     */
    private ManSystem manSystem;
    public HardDisk( ManSystem manSystem ) {
        this.manSystem = manSystem;
    }


    protected int getFieldData(String field, Index idx, StringBuilder value) {
        return super.getFieldData(field, idx, value);
    }

    /**
     *
     * @return
     */
    protected DataIO newListNode() {
       return new FileSystem(manSystem);
    }

    public DataIO getNode(String field) {
        DataIO node = (FileSystem)super.getNode(field);
        if ( node != null) return node;
        FileSystem fileSystem = new FileSystem( manSystem );
        fileSystem.setParam("id", field);
        appendTail(fileSystem);
        return fileSystem;
    }

    public ArrayList getNodes() {
        return this.list;
    }

    public void removeAll() {
        list.clear();
    }
}
