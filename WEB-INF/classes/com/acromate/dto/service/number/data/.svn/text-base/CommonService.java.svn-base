package com.acromate.dto.service.number.data;

import com.acromate.framework.util.Str;
public class CommonService
{
    //////////////////////////////////////////////////////////////////////////////
    //                      ***** COMMON SERVICE *****                                                             //
    //////////////////////////////////////////////////////////////////////////////

    public int nCOMMON_SHORTCUT_NUMBER   = 1 ;//단축번호
    public int nCOMMON_CALL_TRANSFER = 0 ;//호전달
    public int nCOMMON_MAIL_BOX = 0 ;//사서함

    public int getShortcutNumber() { return this.nCOMMON_SHORTCUT_NUMBER; }
    public void   setShortcutNumber( int nCOMMON_SHORTCUT_NUMBER ) { this.nCOMMON_SHORTCUT_NUMBER = nCOMMON_SHORTCUT_NUMBER ; }

    public int getCallTransfer() { return this.nCOMMON_CALL_TRANSFER; }
    public void setCallTransfer( int nCOMMON_CALL_TRANSFER ) { this.nCOMMON_CALL_TRANSFER = nCOMMON_CALL_TRANSFER ; }

    public int getMailBox() { return this.nCOMMON_MAIL_BOX; }
    public void setMailBox( int nCOMMON_MAIL_BOX ) { this.nCOMMON_MAIL_BOX = nCOMMON_MAIL_BOX ; }

    public String get64ByteString() {
        String commonService = "00000000000000000000000000000000" ;
        String strShortcutNumber = String.valueOf( nCOMMON_SHORTCUT_NUMBER ) ;
        String strCallTransfer = String.valueOf( nCOMMON_CALL_TRANSFER ) ;
        String strMailBox = String.valueOf( nCOMMON_MAIL_BOX ) ;
        commonService = commonService.substring(0,1) +
			strShortcutNumber +
			"0" +
			strCallTransfer +
			commonService.substring(4,8) +
			strMailBox +
			commonService.substring(9,32) ;
        return commonService ;
    }

    public void  set64ByteString ( String commonService ) {
//    	if( commonService.length() < 30){
//    		System.out.println( "commonService.length() : "+commonService.length());
//    		commonService = "00000000000000000000000000000000" ;
//    	}
        String strShortcutNumber = commonService.substring(1,2) ;
        String strMonoCall = commonService.substring(2,3) ;
        String strCallTransfer = commonService.substring(3,4) ;
        String strMailBox = commonService.substring(8,9) ;
        this.nCOMMON_SHORTCUT_NUMBER = Str.CheckNullInt(strShortcutNumber) ;
        this.nCOMMON_CALL_TRANSFER = Str.CheckNullInt(strCallTransfer) ;
        this.nCOMMON_MAIL_BOX = Str.CheckNullInt(strMailBox) ;
    }

    public String toString()
    {
        StringBuffer sb = new StringBuffer("") ;
        sb.append("[nCOMMON_SHORTCUT_NUMBER:"                  + getShortcutNumber() + "] ") ;
        sb.append("[nCOMMON_CALL_TRANSFER:"      + getCallTransfer() + "] ") ;
        sb.append("[nCOMMON_MAIL_BOX:"      + getMailBox() + "] ") ;
        return sb.toString();
    }
}

