    public WorkDeptNumberDTO getDTO(QueryStatement statement, String strSubscriberID, String strSubOrgID, String strDeptID, String strE164) {
        WorkDeptNumberDTO workDeptNumberDTO = new WorkDeptNumberDTO();
        ResultSet rs = null;

        String strWhere = " where 1 = 1 ";

        if(!("").equals(strSubscriberID)) strWhere += " AND subscriberID = '"+strSubscriberID+"' ";
        if(!("").equals(strSubOrgID)) strWhere += " AND subOrgID = '"+strSubOrgID+"' ";
        if(!("").equals(strDeptID)) strWhere += " AND deptID = '"+strDeptID+"' ";
        if(!("").equals(strE164) || !strE164.equals(null)) strWhere += " AND e164 = '"+strE164+"' ";

        try {
            String queryString = "SELECT subscriberID, subOrgID, deptID, e164, e164Type, grade ";
            queryString += " From Table_WorkDeptNumber ";
            queryString += strWhere;

            log.info(queryString) ;
            rs = statement.executeQuery(queryString) ;

            if ( rs.next() )  {
                workDeptNumberDTO = new WorkDeptNumberDTO() ;
                workDeptNumberDTO.setSubscriberID(Str.CheckNullString(rs.getString(1)));
                workDeptNumberDTO.setSubOrgID(Str.CheckNullString(rs.getString(2)));
                workDeptNumberDTO.setDeptID(Str.CheckNullString(rs.getString(3)));
                workDeptNumberDTO.setE164(Str.CheckNullString(rs.getString(4)));
                workDeptNumberDTO.setE164Type(rs.getInt(5));
                workDeptNumberDTO.setGrade(rs.getInt(6));
           }
        } catch(Exception e) {
            log.error("exception occurred > ", e);
        } finally {
            try {
                if (rs != null) rs.close();
            } catch(Exception e) { log.error("exception occurred > ", e); }
        }

        return workDeptNumberDTO;
    }

    public ArrayList getList(QueryStatement statement, String strSubscriberID,String strSubOrgID, String strDeptID, String nE164) {
        ArrayList list = new ArrayList();
        WorkDeptNumberDTO workDeptNumberDTO = null;
        ResultSet rs = null;

        String strWhere = " where 1 = 1 ";

        if(strSubscriberID.length() > 0) strWhere += " AND subscriberID = '"+strSubscriberID+"' ";
        if(!strSubOrgID.equals("")) strWhere += " AND subOrgID = '"+strSubOrgID+"' ";
        if(!strDeptID.equals("")) strWhere += " AND deptID = '"+strDeptID+"' ";
        if(!nE164.equals("")) strWhere += " AND e164 = '"+nE164+"' ";


        try {
            String queryString = "SELECT subscriberID, subOrgID, deptID, e164, e164Type, grade ";
            queryString += " From Table_WorkDeptNumber ";
            queryString += strWhere;

            log.info(queryString) ;
            rs = statement.executeQuery(queryString) ;

            while ( rs.next() )  {
                workDeptNumberDTO = new WorkDeptNumberDTO() ;
                workDeptNumberDTO.setSubscriberID(Str.CheckNullString(rs.getString(1)));
                workDeptNumberDTO.setSubOrgID(Str.CheckNullString(rs.getString(2)));
                workDeptNumberDTO.setDeptID(Str.CheckNullString(rs.getString(3)));
                workDeptNumberDTO.setE164(Str.CheckNullString(rs.getString(4)));
                workDeptNumberDTO.setE164Type(rs.getInt(5));
                workDeptNumberDTO.setGrade(rs.getInt(6));

                list.add(workDeptNumberDTO) ;
            }
        } catch(Exception e) {
            log.error("exception occurred > ", e);
        } finally {
            try {
                if (rs != null) rs.close();
            } catch(Exception e) { log.error("exception occurred > ", e); }
        }

        return list;
    }

