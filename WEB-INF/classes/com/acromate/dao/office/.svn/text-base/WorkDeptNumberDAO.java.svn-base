    private WorkDeptNumberDTO workDeptNumberDTO ;
    QueryStatement statement ;

    public WorkDeptNumberDAO() {}

    public WorkDeptNumberDAO( QueryStatement statement, WorkDeptNumberDTO workDeptNumberDTO ) {
        this.statement = statement ;
