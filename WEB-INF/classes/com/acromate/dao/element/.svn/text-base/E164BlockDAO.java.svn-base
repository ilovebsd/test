    public E164BlockDTO getDTO(QueryStatement statement, String E164, int InOutFlag, String StartPrefix ) {
        E164BlockDTO e164BlockDTO = null;
        ResultSet rs = null;

        try {
            String queryString = "SELECT e164, inoutFlag, startPrefix, endPrefix, blockID, prefixType, blockIDType, description ";
            queryString += " From Table_E164Block Where e164 = '" + E164 + "' ";
            queryString += " AND inoutFlag = " + InOutFlag + " " ;
            queryString += " AND startPrefix = '" + StartPrefix + "' " ;
            System.out.println(queryString) ;
            rs = statement.executeQuery(queryString) ;

            if ( rs.next() )  {
                e164BlockDTO = new E164BlockDTO() ;

                e164BlockDTO.setE164(Str.CheckNullString(rs.getString(1)));
                e164BlockDTO.setInoutFlag(rs.getInt(2));
                e164BlockDTO.setStartPrefix(Str.CheckNullString(rs.getString(3)));
                e164BlockDTO.setEndPrefix(Str.CheckNullString(rs.getString(4)));
                e164BlockDTO.setBlockID(Str.CheckNullString(rs.getString(5)));
                e164BlockDTO.setPrefixType(rs.getInt(6));
                e164BlockDTO.setBlockIDType(rs.getInt(7));
                e164BlockDTO.setDescription(Str.CheckNullString(rs.getString(8)));
            }
        } catch(Exception e) {
            e.printStackTrace();
        } finally {
            try {
                if (rs != null) rs.close();
            } catch(Exception e) { e.printStackTrace(); }
        }
        return e164BlockDTO;
    }



