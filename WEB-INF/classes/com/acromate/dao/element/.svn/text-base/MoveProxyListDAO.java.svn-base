    public ArrayList getList(QueryStatement statement, String strHostID) {
        ArrayList list = new ArrayList() ;
        MoveProxyListDTO moveProxyListDTO = null ;
        ResultSet rs = null ;
        String strWhere = " Where 1= 1 ";

        if(!strHostID.equals("")){
            strWhere += " AND GroupID = '" + strHostID+ "' ";
        }

        try {
            String queryString = "SELECT HostID, MoveType, HostIP, Descriptor " ;
            queryString += " From Table_RegMoveHost "  + strWhere ;

            rs = statement.executeQuery(queryString) ;
            System.out.println(queryString) ;

            while ( rs.next() )  {
                moveProxyListDTO = new MoveProxyListDTO() ;
                moveProxyListDTO.setHostID(Str.CheckNullString(rs.getString(1)));
                moveProxyListDTO.setMoveType(rs.getInt(2));
                moveProxyListDTO.setHostIP(Str.CheckNullString(rs.getString(3)));
                moveProxyListDTO.setDescriptor(Str.CheckNullString(rs.getString(4)));
                list.add(moveProxyListDTO) ;
            }
        } catch(Exception e) {
            e.printStackTrace();
        } finally {
            try {
                if (rs != null) rs.close();
            } catch(Exception e) { e.printStackTrace(); }
        }

        return list;
    }

