import com.acromate.db.QueryStatement ;
import java.util.ArrayList;
import com.acromate.util.Str;
import java.sql.ResultSet;
import com.acromate.dto.element.FeatureServiceDTO;
import com.acromate.util.Logger;

public class FeatureServiceDAO {
    private Logger log = Logger.getLogger(this.getClass());

    private FeatureServiceDTO featureServiceDTO ;
    QueryStatement statement ;

    public FeatureServiceDAO() {}

    public FeatureServiceDAO( QueryStatement statement, FeatureServiceDTO featureServiceDTO ) {
        this.statement = statement ;
        this.featureServiceDTO = featureServiceDTO ;
    }

    public ArrayList getList(QueryStatement statement, String E164) {
        ArrayList list = new ArrayList() ;
        FeatureServiceDTO featureServiceDTO = null ;
        ResultSet rs = null ;

        try {
            String queryString = "SELECT e164, serviceNo, priority, userParam " ;
            queryString += " From Table_FeatureService Where e164 = '" + E164 + "' ";

            rs = statement.executeQuery(queryString) ;
            log.info(queryString) ;

            while ( rs.next() )  {
                featureServiceDTO = new FeatureServiceDTO() ;
                featureServiceDTO.setE164(Str.CheckNullString(rs.getString(1)));
                featureServiceDTO.setServiceNo(rs.getInt(2));
                featureServiceDTO.setPriority(rs.getInt(3));
                featureServiceDTO.setUserParam(Str.CheckNullString(rs.getString(4)));
                list.add(featureServiceDTO) ;
            }
        } catch(Exception e) {
            log.error("exception occurred > ", e);
        } finally {
            try {
                if (rs != null) rs.close();
            } catch(Exception e) { log.error("exception occurred > ", e); }
        }

        return list;
    }

    public boolean insert ( QueryStatement statement, FeatureServiceDTO featureServiceDTO  ) {
        String queryString = "";
        int count = 0;
        try {
            if (statement == null) {
                return false;
            }

            queryString =   " INSERT INTO Table_FeatureService ";
            queryString += " (e164, serviceNo, priority, userParam, INOUTFLAG, ServiceType )";
            queryString += " VALUES (" ;
            queryString += " '" + featureServiceDTO.getE164() + "' ," ;
            queryString += "  " + featureServiceDTO.getServiceNo() + "," ;
            queryString += "  " + featureServiceDTO.getPriority() + "," ;
            queryString += " '" + featureServiceDTO.getUserParam() + "', 2, 1)" ;

            log.info(queryString) ;
            count = statement.executeUpdate(queryString);
        } catch (Exception e) {
            log.error("exception occurred > ", e);
            return false;
        }
        return true ;
    }

