import com.acromate.db.QueryStatement ;
import java.util.ArrayList;
import com.acromate.util.Str;
import java.sql.ResultSet;
import com.acromate.dto.element.KeyNumberDTO;
import com.acromate.util.Logger;

public class KeyNumberDAO {
    private Logger log = Logger.getLogger(this.getClass());

    private KeyNumberDTO keyNumberDTO ;
    QueryStatement statement ;

    public KeyNumberDAO() {}

    public KeyNumberDAO( QueryStatement statement, KeyNumberDTO keyNumberDTO ) {
        this.statement = statement ;
        this.keyNumberDTO = keyNumberDTO ;
    }

    public ArrayList getList(QueryStatement statement, String KeynumberID) {
        ArrayList list = new ArrayList() ;
        KeyNumberDTO keyNumberDTO = null ;
        ResultSet rs = null ;

        try {
            String queryString = "SELECT keynumberID, e164, indexNo, fromTime, toTime " ;
            queryString += " From Table_KeyNumber Where keynumberID = '" + KeynumberID +"' ";
            rs = statement.executeQuery(queryString) ;
            log.info(queryString) ;

            while ( rs.next() )  {
                keyNumberDTO = new KeyNumberDTO() ;
                keyNumberDTO.setKeynumberID(Str.CheckNullString(rs.getString(1)));
                keyNumberDTO.setE164(Str.CheckNullString(rs.getString(2)));
                keyNumberDTO.setIndexNo(rs.getInt(3));
                keyNumberDTO.setFromTime(Str.CheckNullString(rs.getString(4)));
                keyNumberDTO.setToTime(Str.CheckNullString(rs.getString(5)));
                list.add(keyNumberDTO) ;
            }
        } catch(Exception e) {
            log.error("exception occurred > ", e);
        } finally {
            try {
                if (rs != null) rs.close();
            } catch(Exception e) { log.error("exception occurred > ", e); }
        }

        return list;
    }

    public boolean insert ( QueryStatement statement, KeyNumberDTO keyNumberDTO  ) {
        String queryString = "";
        int count = 0;
        try {
            if (statement == null) {
                return false;
            }

            queryString =   " INSERT INTO Table_KeyNumber ";
            queryString += " (keynumberID, e164, indexNo, fromTime, toTime) " ;
            queryString += " VALUES (" ;
            queryString += " '" + keyNumberDTO.getKeynumberID() + "' ," ;
            queryString += " '" + keyNumberDTO.getE164() + "' ," ;
            queryString += "  " + keyNumberDTO.getIndexNo() + "," ;
            queryString += " '" + keyNumberDTO.getFromTime() + "'," ;
            queryString += " '" + keyNumberDTO.getToTime() + "') " ;

            log.info(queryString) ;
            count = statement.executeUpdate(queryString);
        } catch (Exception e) {
            log.error("exception occurred > ", e);
            return false;
        }
        return true ;
    }


    public boolean update( QueryStatement statement, KeyNumberDTO keyNumberDTO  ) {
        String queryString = "";
        int count = 0;
        try {
            if (statement == null) {
                return false;
            }

            queryString = " UPDATE Table_KeyNumber SET ";
            queryString += "indexNo = " + keyNumberDTO.getIndexNo() + "," ;
            queryString += "fromTime = '" + keyNumberDTO.getFromTime() + "'," ;
            queryString += "toTime = '" + keyNumberDTO.getToTime() + "' " ;
            queryString += " WHERE keynumberID = '" + keyNumberDTO.getKeynumberID() + "' ";
            queryString += " AND E164 = '"+keyNumberDTO.getE164()+"' ";

            count = statement.executeUpdate(queryString);
        } catch (Exception e) {
            log.error("exception occurred > ", e);
            return false;
        }
        return true ;
    }

    public boolean delete( QueryStatement statement,  KeyNumberDTO keyNumberDTO) {
        String queryString = "";
        int count = 0;
        try {
            if (statement == null) {
                return false;
            }
            queryString = " DELETE FROM Table_KeyNumber Where keynumberID = '" + keyNumberDTO.getKeynumberID() + "' AND E164 = '"+keyNumberDTO.getE164()+"' ";
            count = statement.executeUpdate(queryString);
        } catch (Exception e) {
            log.error("exception occurred > ", e);
            return false;
        }
        return true ;
    }

    public boolean deleteKeyNumberID( QueryStatement statement,  String keyNumberID) {
        String queryString = "";
        int count = 0;
        try {
            if (statement == null) {
                return false;
            }
            queryString = " DELETE FROM Table_KeyNumber Where keynumberID = '" + keyNumberID+ "'  ";
            count = statement.executeUpdate(queryString);
        } catch (Exception e) {
            e.printStackTrace();
            return false;
        }
        return true ;
    }



}





