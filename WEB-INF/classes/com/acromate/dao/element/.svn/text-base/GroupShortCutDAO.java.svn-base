    public GroupShortCutDTO getDTO(QueryStatement statement, String strGroupID, String strServiceNumber ) {
        GroupShortCutDTO groupShortCutDTO = null;
        ResultSet rs = null;

        try {
            String queryString = "SELECT groupID, serviceNumber, serviceType, routingNumber, description, userParam1, userParam2  ";
            queryString += " From Table_GroupShortCut ";
            queryString += " WHERE groupID='" + strGroupID + "' ";
            queryString += " AND serviceNumber = '" + strServiceNumber + "' " ;
            System.out.println(queryString) ;
            rs = statement.executeQuery(queryString) ;

            if ( rs.next() )  {
                groupShortCutDTO = new GroupShortCutDTO() ;

                groupShortCutDTO.setGroupID(Str.CheckNullString(rs.getString(1)));
                groupShortCutDTO.setServiceNumber(Str.CheckNullString(rs.getString(2)));
                groupShortCutDTO.setServiceType(rs.getInt(3));
                groupShortCutDTO.setRoutingNumber(Str.CheckNullString(rs.getString(4)));
                groupShortCutDTO.setDescription(Str.CheckNullString(rs.getString(5)));
                groupShortCutDTO.setUserParam1(Str.CheckNullString(rs.getString(6)));
                groupShortCutDTO.setUserParam2(Str.CheckNullString(rs.getString(7)));
            }
        } catch(Exception e) {
            e.printStackTrace();
        } finally {
            try {
                if (rs != null) rs.close();
            } catch(Exception e) { e.printStackTrace(); }
        }
        return groupShortCutDTO;
    }


