package com.acromate.dao.element ;

import com.acromate.db.QueryStatement ;
import com.acromate.dto.element.E164DTO;
import java.util.ArrayList;
import com.acromate.util.Str;
import java.sql.ResultSet;
import com.acromate.dto.element.E164ServiceDTO;

public class E164ServiceDAO {
    private E164ServiceDTO e164ServiceDTO ;
    QueryStatement statement ;

    public E164ServiceDAO() {}

    public E164ServiceDTO getDTO( QueryStatement statement, String strE164 ) {
        E164ServiceDTO e164ServiceDTO = null;
        ResultSet rs = null;

        try {
            String queryString = "SELECT E164 , CallerService, AnswerService, CommonService, " ;
            queryString += " VirtualCID, DirectForwardNumber,  HotLineNumber, HotLineDelayTime, " ;
            queryString += " LastReceivedNumber, LastDialedNumber, MailBox " ;
            queryString += " From Table_E164 " ;
            queryString += " WHERE E164 = '" + strE164 + "' " ;
            rs = statement.executeQuery(queryString) ;

            if ( rs.next() )  {
                e164ServiceDTO = new E164ServiceDTO() ;
                e164ServiceDTO.setE164(Str.CheckNullString(rs.getString(1)));
                e164ServiceDTO.setCallerService64(Str.CheckNullString(rs.getString(2)));
                e164ServiceDTO.setAnswerService64(Str.CheckNullString(rs.getString(3)));
                e164ServiceDTO.setCommonService32(Str.CheckNullString(rs.getString(4)));
                e164ServiceDTO.setVirtualcid(Str.CheckNullString(rs.getString(5)));
                e164ServiceDTO.setDirectforwardnumber(Str.CheckNullString(rs.getString(6)));
                e164ServiceDTO.setHotlinenumber(Str.CheckNullString(rs.getString(7)));
                e164ServiceDTO.setHotlinedelaytime(rs.getInt(8));
                e164ServiceDTO.setLastreceivednumber(Str.CheckNullString(rs.getString(9)));
                e164ServiceDTO.setLastdialednumber(Str.CheckNullString(rs.getString(10)));
                e164ServiceDTO.setMailbox(Str.CheckNullString(rs.getString(11)));
            }
        } catch(Exception e) {
            e.printStackTrace();
        } finally {
            try {
                if (rs != null) rs.close();
            } catch(Exception e) { e.printStackTrace(); }
        }
        return e164ServiceDTO;
    }

    public boolean update( QueryStatement statement, E164ServiceDTO e164ServiceDTO ) {
        String queryString = "";
        int count = 0;
        try {
            if (statement == null) {
                return false;
            }

            queryString = " UPDATE Table_E164 SET ";
            queryString += "CallerService= '" + e164ServiceDTO.getCallerService64() + "'," ;
            queryString += "AnswerService= '" + e164ServiceDTO.getAnswerService64() + "'," ;
            queryString += "CommonService= '" + e164ServiceDTO.getCommonService32() + "'," ;
            queryString += "VirtualCID = '" + e164ServiceDTO.getVirtualcid() + "'," ;
            queryString += "DirectForwardNumber= '" + e164ServiceDTO.getDirectforwardnumber() + "'," ;
            queryString += "HotLineNumber= '" + e164ServiceDTO.getHotlinenumber() + "'," ;
            queryString += "HotLineDelayTime =" + e164ServiceDTO.getHotlinedelaytime() + " ," ;
            queryString += "LastReceivedNumber = '" + e164ServiceDTO.getLastreceivednumber() + "'," ;
            queryString += "LastDialedNumber = '" + e164ServiceDTO.getLastdialednumber() + "'," ;
            queryString += "MailBox= '" + e164ServiceDTO.getMailbox() + "' " ;
            queryString += " WHERE E164 = '" + e164ServiceDTO.getE164() + "' ";

            System.out.println(queryString);
            count = statement.executeUpdate(queryString);
        } catch (Exception e) {
            e.printStackTrace();
            return false;
        }
        return true ;
    }

}


