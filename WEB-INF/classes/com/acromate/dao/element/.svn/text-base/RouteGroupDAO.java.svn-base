import com.acromate.db.QueryStatement ;
import java.util.ArrayList;
import com.acromate.util.Str;
import java.sql.ResultSet;
import com.acromate.dto.element.RouteGroupDTO;
import com.acromate.util.Logger;

public class RouteGroupDAO {
    private Logger log = Logger.getLogger(this.getClass());

    private RouteGroupDTO routeGroupDTO ;
    QueryStatement statement ;

    public RouteGroupDAO() {}

    public RouteGroupDAO( QueryStatement statement, RouteGroupDTO routeGroupDTO ) {
        this.statement = statement ;
        this.routeGroupDTO = routeGroupDTO ;
    }

    public ArrayList getList(QueryStatement statement, String RouteGroupID) {
        ArrayList list = new ArrayList() ;
        RouteGroupDTO routeGroupDTO = null ;
        ResultSet rs = null ;

        String strWhere = "";

        if ("".equals(RouteGroupID) != true) {
            strWhere += " AND g.routegroupid = '" + RouteGroupID + "' ";
        }

        try {
            String queryString = "SELECT  g.routegroupid, g.routeindex, g.endpointID, g.protocol, g.routeRate , r.endpointClass";
                   queryString += " From Table_ROUTEGROUP g , Table_RouteState r Where g.endpointid = r.endpointid and g.protocol = r.protocol  ";
                   log.info(queryString);
                   rs = statement.executeQuery(queryString);

                   while (rs.next()) {
                    routeGroupDTO = new RouteGroupDTO();
                    routeGroupDTO.setRoutegroupid(Str.CheckNullString(rs.getString(1)));
                    routeGroupDTO.setRouteIndex(rs.getInt(2));
                    routeGroupDTO.setEndpointID(Str.CheckNullString(rs.getString(3)));
                    routeGroupDTO.setProtocol(rs.getInt(4));
                    routeGroupDTO.setRouteRate(rs.getInt(5));
                    routeGroupDTO.setEndpointClass(rs.getInt(6));
                    list.add(routeGroupDTO);
                }
            } catch (Exception e) {
                log.error("exception occurred > ", e);
            } finally {
                try {
                    if (rs != null) rs.close();
                } catch (Exception e) { log.error("exception occurred > ", e); }
            }
        return list;
    }

    public boolean insert ( QueryStatement statement, RouteGroupDTO routeGroupDTO  ) {
        String queryString = "";
        int count = 0;
        try {
            if (statement == null) {
                return false;
            }

            queryString =   " INSERT INTO Table_ROUTEGROUP ";
            queryString += " (routegroupid, routeindex, endpointID, protocol, routeRateg)";
            queryString += " VALUES (" ;
            queryString += " '" + routeGroupDTO.getRoutegroupid() + "' ," ;
            queryString += "  " + routeGroupDTO.getRouteIndex() + "," ;
            queryString += " '" + routeGroupDTO.getEndpointID() + "'," ;
            queryString += "  " + routeGroupDTO.getProtocol() + "," ;
            queryString += "  " + routeGroupDTO.getRouteRate() + ") " ;

            log.info(queryString) ;
            count = statement.executeUpdate(queryString);
        } catch (Exception e) {
            log.error("exception occurred > ", e);
            return false;
        }
        return true ;
    }


    public boolean update( QueryStatement statement, RouteGroupDTO routeGroupDTO  ) {
        String queryString = "";
        int count = 0;
        try {
            if (statement == null) {
                return false;
            }

            queryString = " UPDATE Table_ROUTEGROUP SET ";
            queryString += "endpointID = '" + routeGroupDTO.getEndpointID() + "' ," ;
            queryString += "protocol = " + routeGroupDTO.getProtocol() + "," ;
            queryString += "routeRateg = " + routeGroupDTO.getRouteRate() + " " ;
            queryString += " WHERE routegroupid = '" + routeGroupDTO.getRoutegroupid() + "' ";
            queryString += " AND routeindex = " + routeGroupDTO.getRouteIndex() + " " ;


            count = statement.executeUpdate(queryString);
        } catch (Exception e) {
            log.error("exception occurred > ", e);
            return false;
        }
        return true ;
    }

    public boolean delete( QueryStatement statement,  RouteGroupDTO routeGroupDTO) {
        String queryString = "";
        int count = 0;
        try {
            if (statement == null) {
                return false;
            }
            queryString = " DELETE FROM Table_ROUTEGROUP Where routegroupid = '" + routeGroupDTO.getRoutegroupid() + "' ";
            queryString += " AND routeindex = " + routeGroupDTO.getRouteIndex() + " " ;
            count = statement.executeUpdate(queryString);
        } catch (Exception e) {
            log.error("exception occurred > ", e);
            return false;
        }
        return true ;
    }
}


