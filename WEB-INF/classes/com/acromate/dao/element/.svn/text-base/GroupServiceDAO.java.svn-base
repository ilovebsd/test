import com.acromate.db.QueryStatement ;
import java.util.ArrayList;
import com.acromate.util.Str;
import java.sql.ResultSet;
import com.acromate.dto.element.GroupServiceDTO;
import com.acromate.util.Logger;

public class GroupServiceDAO {
    private Logger log = Logger.getLogger(this.getClass());

    private GroupServiceDTO groupServiceDTO ;
    QueryStatement statement ;

    public GroupServiceDAO() {}

    public GroupServiceDAO( QueryStatement statement, GroupServiceDTO groupServiceDTO ) {
        this.statement = statement ;
        this.groupServiceDTO = groupServiceDTO ;
    }

    public ArrayList getList(QueryStatement statement, String GroupID, int ServiceNo) {
        ArrayList list = new ArrayList() ;
        GroupServiceDTO groupServiceDTO = null ;
        ResultSet rs = null ;
        String strWhere = " Where 1= 1 ";

        if(!GroupID.equals("")){
            strWhere += " AND GroupID = '" + GroupID+ "' ";
        }

        if(ServiceNo > 0){
            strWhere += " AND ServiceNo = " + ServiceNo + " ";
        }

        try {
            String queryString = "SELECT groupID, serviceNo, priority, userParam, inoutFlag " ;
            queryString += " From Table_GroupService  "  + strWhere ;

            rs = statement.executeQuery(queryString) ;
            log.info(queryString) ;

            while ( rs.next() )  {
                groupServiceDTO = new GroupServiceDTO() ;
                groupServiceDTO.setGroupID(Str.CheckNullString(rs.getString(1)));
                groupServiceDTO.setServiceNo(rs.getInt(2));
                groupServiceDTO.setPriority(rs.getInt(3));
                groupServiceDTO.setUserParam(Str.CheckNullString(rs.getString(4)));
                groupServiceDTO.setInoutFlag(rs.getInt(5));
                list.add(groupServiceDTO) ;
            }
        } catch(Exception e) {
            log.error("exception occurred > ", e);
        } finally {
            try {
                if (rs != null) rs.close();
            } catch(Exception e) { log.error("exception occurred > ", e); }
        }

        return list;
    }

    public boolean insert ( QueryStatement statement, GroupServiceDTO groupServiceDTO  ) {
        String queryString = "";
        int count = 0;
        try {
            if (statement == null) {
                return false;
            }

            queryString =   " INSERT INTO Table_GroupService ";
            queryString += " (groupID, serviceNo, priority, userParam, inoutFlag,ServiceType,ErrorControl)";
            queryString += " VALUES (" ;
            queryString += " '" + groupServiceDTO.getGroupID() + "' ," ;
            queryString += "  " + groupServiceDTO.getServiceNo() + "," ;
            queryString += "  " + groupServiceDTO.getPriority() + "," ;
            queryString += " '" + groupServiceDTO.getUserParam() + "'," ;
            queryString += "  " + groupServiceDTO.getInoutFlag() + ",1 ,0) " ;

            log.info(queryString) ;
            count = statement.executeUpdate(queryString);
        } catch (Exception e) {
            log.error("exception occurred > ", e);
            return false;
        }
        return true ;
    }


    public boolean update( QueryStatement statement, GroupServiceDTO groupServiceDTO  ) {
        String queryString = "";
        int count = 0;
        try {
            if (statement == null) {
                return false;
            }

            queryString = " UPDATE Table_GroupService SET ";
            queryString += "priority = " + groupServiceDTO.getPriority() + "," ;
            queryString += "userParam = '" + groupServiceDTO.getUserParam() + "'," ;
            queryString += "inoutFlag = " + groupServiceDTO.getInoutFlag() + " " ;
            queryString += " Where groupID = '" + groupServiceDTO.getGroupID() + "' ";
            queryString += " AND serviceNo = " + groupServiceDTO.getServiceNo() + " " ;


            count = statement.executeUpdate(queryString);
        } catch (Exception e) {
            log.error("exception occurred > ", e);
            return false;
        }
        return true ;
    }

    public boolean delete( QueryStatement statement,  GroupServiceDTO groupServiceDTO) {
        String queryString = "";
        int count = 0;
        try {
            if (statement == null) {
                return false;
            }
            queryString = " DELETE FROM Table_GroupService Where groupID = '" + groupServiceDTO.getGroupID() + "' ";
            queryString += " AND serviceNo = " + groupServiceDTO.getServiceNo() + " " ;

            count = statement.executeUpdate(queryString);
        } catch (Exception e) {
            log.error("exception occurred > ", e);
            return false;
        }
        return true ;
    }
}


