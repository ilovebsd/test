import com.acromate.db.QueryStatement ;
import java.util.ArrayList;
import com.acromate.util.Str;
import java.sql.ResultSet;
import com.acromate.dto.element.LocalPrefixDTO;
import com.acromate.util.Logger;

public class LocalPrefixDAO {
    private Logger log = Logger.getLogger(this.getClass());

    private LocalPrefixDTO localPrefixDTO ;
    QueryStatement statement ;

    public LocalPrefixDAO() {}

    public LocalPrefixDAO( QueryStatement statement, LocalPrefixDTO localPrefixDTO ) {
        this.statement = statement ;
        this.localPrefixDTO = localPrefixDTO ;
    }

    public ArrayList getList(QueryStatement statement, String StartPrefix, int PrefixType) {
        ArrayList list = new ArrayList() ;
        LocalPrefixDTO localPrefixDTO = null ;
        ResultSet rs = null ;

        String strWhere = "" ;

        if(!StartPrefix.equals("")){
            strWhere += " AND StartPrefix = " + StartPrefix +" " ;
        }

        if ( PrefixType  == 5) {
            strWhere += " AND ( MOD(prefixType, 16) = 1 or MOD(prefixType, 16) = 3 ) ";
        } else if(PrefixType > 0 ){
            strWhere += " AND MOD(prefixType, 16) = " + PrefixType +" ";
        }

        try {
            String queryString = "SELECT  startPrefix, endPrefix, prefixType, endpointID, protocol, groupID " ;
            queryString += " From Table_LocalPrefix Where 1 = 1  " ;
            queryString += strWhere;
            rs = statement.executeQuery(queryString) ;
            log.info(queryString) ;

            while ( rs.next() )  {
                localPrefixDTO = new LocalPrefixDTO() ;
                localPrefixDTO.setStartPrefix(Str.CheckNullString(rs.getString(1)));
                localPrefixDTO.setEndPrefix(Str.CheckNullString(rs.getString(2)));
                localPrefixDTO.setPrefixType(rs.getInt(3));
                localPrefixDTO.setEndpointID(Str.CheckNullString(rs.getString(4)));
                localPrefixDTO.setProtocol(rs.getInt(5));
                localPrefixDTO.setGroupID(Str.CheckNullString(rs.getString(6)));
                list.add(localPrefixDTO) ;
            }
        } catch(Exception e) {
            log.error("exception occurred > ", e);
        } finally {
            try {
                if (rs != null) rs.close();
            } catch(Exception e) { log.error("exception occurred > ", e); }
        }

        return list;
    }

    public int getAliasCount(QueryStatement statement, String endpointID) {
        ArrayList list = new ArrayList() ;
        ResultSet rs = null ;
        int count = 0;
        try {
            String queryString = "SELECT COUNT(*) FROM table_localprefix WHERE EndpointID = '" + endpointID + "'";
            System.out.println(queryString) ;
            rs = statement.executeQuery(queryString) ;
            if (rs.next())
                count = rs.getInt(1);
            rs.close();
        } catch(Exception e) {
            e.printStackTrace();
        } finally {
            try {
                if (rs != null) rs.close();
            } catch(Exception e) { e.printStackTrace(); }
        }
        return count;
    }

    public boolean insert ( QueryStatement statement, LocalPrefixDTO localPrefixDTO  ) {
        String queryString = "";
        int count = 0;
        try {
            if (statement == null) {
                return false;
            }

            queryString =   " INSERT INTO Table_LocalPrefix ";
            queryString += " (startPrefix, endPrefix, prefixType, endpointID, protocol, groupID, options, maxdigit)";
            queryString += " VALUES (" ;
            queryString += " '" + localPrefixDTO.getStartPrefix() + "' ," ;
            queryString += " '" + localPrefixDTO.getEndPrefix() + "'," ;
            queryString += "  " + localPrefixDTO.getPrefixType() + "," ;
            queryString += " '" + localPrefixDTO.getEndpointID() + "'," ;
            queryString += "  " + localPrefixDTO.getProtocol() + "," ;
            queryString += " '" + localPrefixDTO.getGroupID() + "', " ;
            queryString += "  " + localPrefixDTO.getOptions() + "," ;
            queryString += "  " + localPrefixDTO.getMaxDigit() + ") " ;

            log.info(queryString) ;
            count = statement.executeUpdate(queryString);
        } catch (Exception e) {
            log.error("exception occurred > ", e);
            return false;
        }
        if (count <= 0) return false ;
        return true ;
    }


    public boolean update( QueryStatement statement, LocalPrefixDTO localPrefixDTO  ) {
        String queryString = "";
        int count = 0;
        try {
            if (statement == null) {
                return false;
            }

            queryString = " UPDATE Table_LocalPrefix SET ";
            queryString += "endPrefix = '" + localPrefixDTO.getEndPrefix() + "' ," ;
            queryString += "prefixType = " + localPrefixDTO.getPrefixType() + "," ;
            queryString += "endpointID = '" + localPrefixDTO.getEndpointID() + "'," ;
            queryString += "protocol = " + localPrefixDTO.getProtocol() + "," ;
            queryString += "groupID = '" + localPrefixDTO.getGroupID() + "' " ;
            queryString += "options = " + localPrefixDTO.getOptions() + "," ;
            queryString += "maxdigit = " + localPrefixDTO.getMaxDigit() + "," ;
            queryString += " WHERE startPrefix = '" + localPrefixDTO.getStartPrefix() + "' ";


            count = statement.executeUpdate(queryString);
            log.info(queryString) ;
        } catch (Exception e) {
            log.error("exception occurred > ", e);
            return false;
        }
        if (count <= 0) return false ;
        return true ;
    }

    public boolean delete( QueryStatement statement,  LocalPrefixDTO localPrefixDTO) {
        String queryString = "";
        int count = 0;
        try {
            if (statement == null) {
                return false;
            }
            queryString = " DELETE FROM Table_LocalPrefix Where startPrefix = '" + localPrefixDTO.getStartPrefix() + "' " ;
            count = statement.executeUpdate(queryString);
            log.info(queryString) ;
        } catch (Exception e) {
            log.error("exception occurred > ", e);
            return false;
        }
        if (count <= 0) return false ;
        return true ;
    }
}


