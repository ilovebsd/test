import com.acromate.db.QueryStatement ;
import java.util.ArrayList;
import com.acromate.util.Str;
import java.sql.ResultSet;
import com.acromate.dto.element.FeatureDetailDTO;
import com.acromate.util.Logger;

public class FeatureDetailDAO {
    private Logger log = Logger.getLogger(this.getClass());

    private FeatureDetailDTO featureDetailDTO ;
    QueryStatement statement ;

    public FeatureDetailDAO() {}

    public FeatureDetailDAO( QueryStatement statement, FeatureDetailDTO featureDetailDTO ) {
        this.statement = statement ;
        this.featureDetailDTO = featureDetailDTO ;
    }

    public ArrayList getList(QueryStatement statement, String ServiceNo, int ServiceClass) {
        ArrayList list = new ArrayList() ;
        FeatureDetailDTO featureDetailDTO = null ;
        ResultSet rs = null ;
        String strWhere = " where 1 = 1 ";

        if(!ServiceNo.equals("")){
            strWhere += " AND serviceNo = '" + ServiceNo + "' ";
        }
        if( ServiceClass > 0){
            strWhere += " AND serviceClass = " + ServiceClass+ " ";
        }


        try {
            String queryString = "SELECT serviceNo, serviceName, serviceClass, endpointID, endpointType, inoutFlag, service, param1, param2, param3 " ;
            queryString += " From Table_FeatureDetail " + strWhere ;
            rs = statement.executeQuery(queryString) ;
            log.info(queryString) ;

            while ( rs.next() )  {
                featureDetailDTO = new FeatureDetailDTO() ;
                featureDetailDTO.setServiceNo(rs.getInt(1));
                featureDetailDTO.setServiceName(Str.CheckNullString(rs.getString(2)));
                featureDetailDTO.setServiceClass(rs.getInt(3));
                featureDetailDTO.setEndpointID(Str.CheckNullString(rs.getString(4)));
                featureDetailDTO.setEndpointType(rs.getInt(5));
                featureDetailDTO.setInoutFlag(rs.getInt(6));
                featureDetailDTO.setService(rs.getInt(7));
                featureDetailDTO.setParam1(Str.CheckNullString(rs.getString(8)));
                featureDetailDTO.setParam2(Str.CheckNullString(rs.getString(9)));
                featureDetailDTO.setParam3(Str.CheckNullString(rs.getString(10)));
                list.add(featureDetailDTO) ;
            }
        } catch(Exception e) {
            log.error("exception occurred > ", e);
        } finally {
            try {
                if (rs != null) rs.close();
            } catch(Exception e) { log.error("exception occurred > ", e); }
        }

        return list;
    }

    public boolean insert ( QueryStatement statement, FeatureDetailDTO featureDetailDTO  ) {
        String queryString = "";
        int count = 0;
        try {
            if (statement == null) {
                return false;
            }

            queryString =   " INSERT INTO Table_FeatureDetail ";
            queryString += " (serviceNo, serviceName, serviceClass, endpointID, endpointType, inoutFlag, service, param1, param2, param3)";
            queryString += " VALUES (" ;
            queryString += "  " + featureDetailDTO.getServiceNo() + " ," ;
            queryString += " '" + featureDetailDTO.getServiceName() + "'," ;
            queryString += "  " + featureDetailDTO.getServiceClass() + "," ;
            queryString += " '" + featureDetailDTO.getEndpointID() + "'," ;
            queryString += "  " + featureDetailDTO.getEndpointType() + "," ;
            queryString += "  " + featureDetailDTO.getInoutFlag() + "," ;
            queryString += "  " + featureDetailDTO.getService() + "," ;
            queryString += " '" + featureDetailDTO.getParam1() + "'," ;
            queryString += " '" + featureDetailDTO.getParam2() + "'," ;
            queryString += " '" + featureDetailDTO.getParam3() + "') " ;

            log.info(queryString) ;
            count = statement.executeUpdate(queryString);
        } catch (Exception e) {
            log.error("exception occurred > ", e);
            return false;
        }
        return true ;
    }


    public boolean update( QueryStatement statement, FeatureDetailDTO featureDetailDTO  ) {
        String queryString = "";
        int count = 0;
        try {
            if (statement == null) {
                return false;
            }

            queryString = " UPDATE Table_FeatureDetail SET ";
            queryString += "serviceName = '" + featureDetailDTO.getServiceName() + "'," ;
            queryString += "endpointID = '" + featureDetailDTO.getEndpointID() + "'," ;
            queryString += "endpointType = " + featureDetailDTO.getEndpointType() + "," ;
            queryString += "inoutFlag = " + featureDetailDTO.getInoutFlag() + "," ;
            queryString += "service = " + featureDetailDTO.getService() + "," ;
            queryString += "param1 = '" + featureDetailDTO.getService() + "'," ;
            queryString += "param2 = '" + featureDetailDTO.getService() + "'," ;
            queryString += "param3 = '" + featureDetailDTO.getParam1() + "' " ;
            queryString += " WHERE serviceNo = '" + featureDetailDTO.getServiceNo() + "' AND serviceClass = " + featureDetailDTO.getServiceClass()+" ";

            count = statement.executeUpdate(queryString);
        } catch (Exception e) {
            log.error("exception occurred > ", e);
            return false;
        }
        return true ;
    }

    public boolean delete( QueryStatement statement,  FeatureDetailDTO featureDetailDTO) {
        String queryString = "";
        int count = 0;
        try {
            if (statement == null) {
                return false;
            }
            queryString = " DELETE FROM Table_FeatureDetail WHERE serviceNo = '" + featureDetailDTO.getServiceNo() + "' AND serviceClass = " + featureDetailDTO.getServiceClass()+" " ;
            count = statement.executeUpdate(queryString);
        } catch (Exception e) {
            log.error("exception occurred > ", e);
            return false;
        }
        return true ;
    }
}


