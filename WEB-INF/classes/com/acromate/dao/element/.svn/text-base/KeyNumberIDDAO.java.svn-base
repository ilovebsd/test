import com.acromate.db.QueryStatement ;
import java.util.ArrayList;
import com.acromate.util.Str;
import java.sql.ResultSet;
import com.acromate.dto.element.KeyNumberIDDTO;
import com.acromate.util.Logger;

public class KeyNumberIDDAO {
    private Logger log = Logger.getLogger(this.getClass());

    private KeyNumberIDDTO keyNumberIDDTO ;
    QueryStatement statement ;

    public KeyNumberIDDAO() {}

    public KeyNumberIDDAO( QueryStatement statement, KeyNumberIDDTO keyNumberIDDTO ) {
        this.statement = statement ;
        this.keyNumberIDDTO = keyNumberIDDTO ;
    }

    public KeyNumberIDDTO getDTO(QueryStatement statement, String KeynumberID) {
        KeyNumberIDDTO keyNumberIDDTO = null ;
        ResultSet rs = null ;

        try {
            String queryString = "SELECT keynumberID, keynumberDesc, hunt, huntIndex, maxHuntIndex, huntConstraint, groupID " ;
            queryString += " From Table_KeyNumberID Where keynumberID = '" + KeynumberID+ "' " ;
            rs = statement.executeQuery(queryString) ;
            System.out.println(queryString) ;
            if ( rs.next() )  {
                keyNumberIDDTO = new KeyNumberIDDTO() ;
                keyNumberIDDTO.setKeynumberID(Str.CheckNullString(rs.getString(1)));
                keyNumberIDDTO.setKeynumberDesc(Str.CheckNullString(rs.getString(2)));
                keyNumberIDDTO.setHunt(rs.getInt(3));
                keyNumberIDDTO.setHuntIndex(rs.getInt(4));
                keyNumberIDDTO.setMaxHuntIndex(rs.getInt(5));
                keyNumberIDDTO.setHuntConstraint(rs.getInt(6));
                keyNumberIDDTO.setGroupID(Str.CheckNullString(rs.getString(7)));
            }
        } catch(Exception e) {
            log.error("exception occurred > ", e);
        } finally {
            try {
                if (rs != null) rs.close();
            } catch(Exception e) { log.error("exception occurred > ", e); }
        }

        return keyNumberIDDTO;
    }

    public boolean insert ( QueryStatement statement, KeyNumberIDDTO keyNumberIDDTO  ) {
        String queryString = "";
        int count = 0;
        try {
            if (statement == null) {
                return false;
            }

            queryString =   " INSERT INTO Table_KeyNumberID ";
            queryString += " (keynumberID, keynumberDesc, hunt, huntIndex, maxHuntIndex, huntConstraint, groupID) " ;
            queryString += " VALUES (" ;
            queryString += " '" + keyNumberIDDTO.getKeynumberID() + "' ," ;
            queryString += " '" + keyNumberIDDTO.getKeynumberDesc() + "' ," ;
            queryString += "  " + keyNumberIDDTO.getHunt() + "," ;
            queryString += "  " + keyNumberIDDTO.getHuntIndex() + "," ;
            queryString += "  " + keyNumberIDDTO.getMaxHuntIndex() + "," ;
            queryString += "  " + keyNumberIDDTO.getHuntConstraint() + "," ;
            queryString += " '" + keyNumberIDDTO.getGroupID() + "') " ;

            log.info(queryString) ;
            count = statement.executeUpdate(queryString);
        } catch (Exception e) {
            log.error("exception occurred > ", e);
            return false;
        }
        return true ;
    }


    public boolean update( QueryStatement statement, KeyNumberIDDTO keyNumberIDDTO  ) {
        String queryString = "";
        int count = 0;
        try {
            if (statement == null) {
                return false;
            }

            queryString = " UPDATE Table_KeyNumberID SET ";
            queryString += "keynumberDesc = '" + keyNumberIDDTO.getKeynumberDesc() + "' ," ;
            queryString += "hunt = " + keyNumberIDDTO.getHunt() + "," ;
            queryString += "huntIndex = " + keyNumberIDDTO.getHuntIndex() + "," ;
            queryString += "maxHuntIndex = " + keyNumberIDDTO.getMaxHuntIndex() + "," ;
            queryString += "huntConstraint = " + keyNumberIDDTO.getHuntConstraint() + "," ;
            queryString += "groupID = '" + keyNumberIDDTO.getGroupID() + "' " ;
            queryString += " WHERE keynumberID = '" + keyNumberIDDTO.getKeynumberID() + "' ";


            count = statement.executeUpdate(queryString);
        } catch (Exception e) {
            log.error("exception occurred > ", e);
            return false;
        }
        return true ;
    }

    public boolean delete( QueryStatement statement,  KeyNumberIDDTO keyNumberIDDTO) {
        String queryString = "";
        int count = 0;
        try {
            if (statement == null) {
                return false;
            }
            queryString = " DELETE FROM Table_KeyNumberID Where keynumberID = '" + keyNumberIDDTO.getKeynumberID() + "' " ;
            count = statement.executeUpdate(queryString);
        } catch (Exception e) {
            log.error("exception occurred > ", e);
            return false;
        }
        return true ;
    }
}





