import com.acromate.db.QueryStatement ;
import java.util.ArrayList;
import com.acromate.util.Str;
import java.sql.ResultSet;
import com.acromate.dto.element.DomainRouteTableDTO;
import com.acromate.dto.element.SpecialNoGIDDTO;
import com.acromate.dto.element.SpecialNoGroupDTO;
import com.acromate.util.Logger;

public class SpecialNoGroupDAO {
    private Logger log = Logger.getLogger(this.getClass());

    private SpecialNoGroupDTO specialNoGroupDTO ;
    QueryStatement statement ;

    public SpecialNoGroupDAO() {}

    public SpecialNoGroupDAO( QueryStatement statement, SpecialNoGroupDTO specialNoGroupDTO ) {
        this.statement = statement ;
        this.specialNoGroupDTO = specialNoGroupDTO ;
    }

    public ArrayList getList(QueryStatement statement, String specialNoGID, String specialNo) {
        ArrayList list = new ArrayList() ;
        SpecialNoGroupDTO specialNoGroupDTO = null ;
        ResultSet rs = null ;
        String strWhere = "";

        if ("".equals(specialNoGID) != true)
            strWhere += " AND SpecialNoGID LIKE '%"+specialNoGID+"%' ";

        if ("".equals(specialNo) != true)
            strWhere += " AND SpecialNo LIKE '%"+specialNo+"%' ";


        try {
            String queryString = "SELECT SPECIALNOGID, SPECIALNO , PrefixTableID, EmergencyYN "
                                +	" FROM table_specialNoGroup Where 1 = 1 "
                                +	strWhere ;

            rs = statement.executeQuery(queryString) ;
            log.info(queryString) ;

            while ( rs.next() )  {
                specialNoGroupDTO = new SpecialNoGroupDTO() ;
                specialNoGroupDTO.setSpecialNoGID(Str.CheckNullString(rs.getString(1)));
                specialNoGroupDTO.setSpecialNo(Str.CheckNullString(rs.getString(2)));
                specialNoGroupDTO.setPrefixTableID(Str.CheckNullString(rs.getString(3)));
                specialNoGroupDTO.setEmergencyYN(rs.getInt(4));
                list.add(specialNoGroupDTO) ;
            }
        } catch(Exception e) {
            log.error("exception occurred > ", e);
        } finally {
            try {
                if (rs != null) rs.close();
            } catch(Exception e) { log.error("exception occurred > ", e); }
        }

        return list;
    }

    public boolean insert ( QueryStatement statement, SpecialNoGroupDTO specialNoGroupDTO  ) {
        String queryString = "";
        int count = 0;
        try {
            if (statement == null) {
                return false;
            }

            queryString =   "INSERT INTO TABLE_SPECIALNOGROUP(SPECIALNOGID,SPECIALNO ,PREFIXTABLEID, EmergencyYN) ";
            queryString +=  " VALUES (" ;
            queryString += " '" + specialNoGroupDTO.getSpecialNoGID() + "' ," ;
            queryString += " '" + specialNoGroupDTO.getSpecialNo() + "'," ;
            queryString += " '" + specialNoGroupDTO.getPrefixTableID() + "'," ;
            queryString += "  " + specialNoGroupDTO.getEmergencyYN() + ") " ;

            log.info(queryString) ;
            count = statement.executeUpdate(queryString);
        } catch (Exception e) {
            log.error("exception occurred > ", e);
            return false;
        }
        return true ;
    }


    public boolean update( QueryStatement statement, SpecialNoGroupDTO specialNoGroupDTO  ) {
        String queryString = "";
        int count = 0;
        try {
            if (statement == null) {
                return false;
            }

            queryString = "Update TABLE_SPECIALNOGROUP ";
            queryString +="set  PrefixTableID = '" + specialNoGroupDTO.getPrefixTableID()+"', " ;
            queryString += " EmergencyYN = "+ specialNoGroupDTO.getEmergencyYN() +" ";
            queryString += " where SPECIALNOGID ='"+specialNoGroupDTO.getSpecialNoGID()+"' AND SPECIALNO = '"+specialNoGroupDTO.getSpecialNo()+"' " ;



            count = statement.executeUpdate(queryString);
        } catch (Exception e) {
            log.error("exception occurred > ", e);
            return false;
        }
        return true ;
    }

    public boolean delete( QueryStatement statement,  SpecialNoGroupDTO specialNoGroupDTO) {
        String queryString = "";
        String strWhere = "WHERE SPECIALNOGID ='"+specialNoGroupDTO.getSpecialNoGID()+"' AND SPECIALNO = '"+specialNoGroupDTO.getSpecialNo()+"' " ;
        int count = 0;
        try {
            if (statement == null) {
                return false;
            }
            queryString = queryString = "Delete from TABLE_SPECIALNOGROUP "+strWhere;


            count = statement.executeUpdate(queryString);
        } catch (Exception e) {
            log.error("exception occurred > ", e);
            return false;
        }
        return true ;
    }
}





