        queryString += " AlarmType = "+ currentAlarmDTO.getAlarmType()+", ";
        queryString += " AlarmLevel = "+ currentAlarmDTO.getAlarmLevel()+", ";
        queryString += " AlarmMessage = '"+ currentAlarmDTO.getAlarmMessage()+"', ";
        queryString += " CheckTime = '"+ currentAlarmDTO.getCheckTime()+"', ";
        queryString += " LastInTime = '"+ currentAlarmDTO.getLastInTime()+"', ";
