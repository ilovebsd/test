import com.acromate.db.QueryStatement ;
import java.util.ArrayList;
import com.acromate.util.Str;
import java.sql.ResultSet;
import com.acromate.dto.ems.CurrentAlarmDTO;
import com.acromate.util.Logger;



public class CurrentAlarmDAO {
    private Logger log = Logger.getLogger(this.getClass());

    private CurrentAlarmDTO currentAlarmDTO ;
    QueryStatement statement ;

    public CurrentAlarmDAO() {}

    public CurrentAlarmDAO( QueryStatement statement, CurrentAlarmDTO currentAlarmDTO ) {
        this.statement = statement ;
        this.currentAlarmDTO = currentAlarmDTO ;
    }

    public ArrayList getList(QueryStatement statement , String sysGroupID) {
        ArrayList list = new ArrayList();
        CurrentAlarmDTO currentAlarmDTO = null;
        ResultSet rs = null;
        String strWhere = "" ;
        if ( Str.CheckNullString(sysGroupID).length() > 0 )  strWhere = " WHERE SysGroupID = '"+ sysGroupID +"' " ;


        try {
            String queryString = "SELECT IndexNo, SysGroupID, HwClusterID, HwID, ClusterID, ObjectName, SystemPath, ObjectPath, AlarmType, ";
            queryString += " AlarmLevel, AlarmMessage, To_Char(CheckTime, 'YYYY-MM-DD HH24:MI:SS'), To_Char(LastInTime, 'YYYY-MM-DD HH24:MI:SS'), ViewInfo, Code,AlarmName, AutoCloseWait ";
            queryString += " From Table_CurrentAlarm " + strWhere ;

            log.info(queryString) ;
            rs = statement.executeQuery(queryString) ;

            while ( rs.next() )  {
                currentAlarmDTO = new CurrentAlarmDTO() ;
                currentAlarmDTO.setIndexNo(rs.getInt(1));
                currentAlarmDTO.setSysGroupID(Str.CheckNullString(rs.getString(2)));
                currentAlarmDTO.setHwClusterID(Str.CheckNullString(rs.getString(3)));
                currentAlarmDTO.setHwID(Str.CheckNullString(rs.getString(4)));
                currentAlarmDTO.setClusterID(Str.CheckNullString(rs.getString(5)));
                currentAlarmDTO.setObjectName(Str.CheckNullString(rs.getString(6)));
                currentAlarmDTO.setSystemPath(Str.CheckNullString(rs.getString(7)));
                currentAlarmDTO.setObjectPath(Str.CheckNullString(rs.getString(8)));
                currentAlarmDTO.setAlarmType(rs.getInt(9));
                currentAlarmDTO.setAlarmLevel(rs.getInt(10));
                currentAlarmDTO.setAlarmMessage(Str.CheckNullString(rs.getString(11)));
                currentAlarmDTO.setCheckTime(Str.CheckNullString(rs.getString(12)));
                currentAlarmDTO.setLastInTime(Str.CheckNullString(rs.getString(13)));
                currentAlarmDTO.setViewInfo(rs.getInt(14));
                currentAlarmDTO.setCode(Str.CheckNullString(rs.getString(15)));
                currentAlarmDTO.setAlarmName(Str.CheckNullString(rs.getString(16)));
                currentAlarmDTO.setAutoCloseWait(rs.getInt(17));

                list.add(currentAlarmDTO) ;
            }
        } catch(Exception e) {
            log.error("exception occurred > ", e);
        } finally {
            try {
                if (rs != null) rs.close();
            } catch(Exception e) { log.error("exception occurred > ", e); }
        }

        return list;
    }

    public boolean insert ( QueryStatement statement, CurrentAlarmDTO currentAlarmDTO  ) {
        String queryString = "";
        int count = 0;
        try {
            if (statement == null) {
                return false;
            }

            queryString =   " INSERT INTO Table_CurrentAlarm ";
            queryString += " (IndexNo, SysGroupID, HwClusterID, HwID, ClusterID, ObjectName, SystemPath, ObjectPath, AlarmType, ";
            queryString += " AlarmLevel, AlarmMessage, CheckTime, LastInTime, ViewInfo, Code, AlarmName, AutoCloseWait) ";
            queryString += " VALUES (" ;
            queryString += "  "+currentAlarmDTO.getIndexNo()+", ";
            queryString += " '"+currentAlarmDTO.getSysGroupID()+"', ";
            queryString += " '"+currentAlarmDTO.getHwClusterID()+"', ";
            queryString += " '"+currentAlarmDTO.getHwID()+"', ";
            queryString += " '"+currentAlarmDTO.getClusterID()+"', ";
            queryString += " '"+currentAlarmDTO.getObjectName()+"', ";
            queryString += " '"+currentAlarmDTO.getSystemPath()+"', ";
            queryString += " '"+currentAlarmDTO.getObjectPath()+"', ";
            queryString += "  "+currentAlarmDTO.getAlarmType()+", ";
            queryString += "  "+currentAlarmDTO.getAlarmLevel()+", ";
            queryString += " '"+currentAlarmDTO.getAlarmMessage()+"', ";
            queryString += " '"+currentAlarmDTO.getCheckTime()+"', ";
            queryString += " '"+currentAlarmDTO.getLastInTime()+"', ";
            queryString += "  "+currentAlarmDTO.getViewInfo()+", ";
            queryString += " '"+currentAlarmDTO.getCode()+"', ";
            queryString += " '"+currentAlarmDTO.getAlarmName()+"', ";
            queryString += "  "+currentAlarmDTO.getAutoCloseWait()+") ";

            log.info(queryString) ;
            count = statement.executeUpdate(queryString);
        } catch (Exception e) {
            log.error("exception occurred > ", e);
            return false;
        }
        return true ;
    }

    public boolean update( QueryStatement statement, CurrentAlarmDTO currentAlarmDTO  ) {
    String queryString = "";
    int count = 0;
    try {
        if (statement == null) {
            return false;
        }

        queryString = " UPDATE Table_CurrentAlarm SET ";
 //       queryString += " IndexNo = "+currentAlarmDTO.getIndexNo()+", ";
        queryString += " SysGroupID='" + currentAlarmDTO.getSysGroupID() + "', ";
        queryString += " HwClusterID='" + currentAlarmDTO.getHwClusterID() + "', ";
        queryString += " HwID = '"+currentAlarmDTO.getHwID()+"', ";
        queryString += " ClusterID = '" + currentAlarmDTO.getClusterID() + "', ";
        queryString += " ObjectName = '"+ currentAlarmDTO.getObjectName()+"', ";
        queryString += " SystemPath = '"+ currentAlarmDTO.getSystemPath()+"', ";
