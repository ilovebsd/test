package com.acromate.dao.service;

import com.acromate.db.QueryStatement ;
import java.util.ArrayList;
import com.acromate.util.Str;
import java.sql.ResultSet;
import com.acromate.dto.service.ServiceApplicationDTO;

public class ServiceApplicationDAO {

    private ServiceApplicationDTO serviceApplicationDTO ;
    QueryStatement statement ;

    public ServiceApplicationDAO() {}

    public ServiceApplicationDAO( QueryStatement statement, ServiceApplicationDTO serviceApplicationDTO ) {
        this.statement = statement ;
        this.serviceApplicationDTO = serviceApplicationDTO ;
    }

    public ArrayList getList(QueryStatement statement, String strE164 ) {
        ArrayList list = new ArrayList() ;
        ServiceApplicationDTO serviceApplicationDTO = null ;
        ResultSet rs = null ;

        try {
            String queryString = "SELECT E164, ServiceNo, Options ";
            queryString += " From Table_ServiceApplication ";
            queryString += " WHERE E164 = '" + strE164 + "' ";

            System.out.println(queryString) ;
            rs = statement.executeQuery(queryString) ;

            while ( rs.next() )  {
                serviceApplicationDTO = new ServiceApplicationDTO() ;
                serviceApplicationDTO.setE164(Str.CheckNullString(rs.getString(1)));
                serviceApplicationDTO.setServiceNo(rs.getInt(2));
                serviceApplicationDTO.setOptions(rs.getInt(3));
                list.add(serviceApplicationDTO) ;
            }
        } catch(Exception e) {
            e.printStackTrace();
        } finally {
            try {
                if (rs != null) rs.close();
            } catch(Exception e) { e.printStackTrace(); }
        }
        return list;
    }

    public ServiceApplicationDTO getDTO(QueryStatement statement, String strE164, int nServiceNo ) {
        ServiceApplicationDTO serviceApplicationDTO = null;
        ResultSet rs = null;

        try {
            String queryString = "SELECT E164, ServiceNo, Options ";
            queryString += " From Table_ServiceApplication ";
            queryString += " WHERE E164 = '" + strE164 + "' ";
            queryString += " AND ServiceNo = " + nServiceNo + " " ;

            System.out.println(queryString) ;
            rs = statement.executeQuery(queryString) ;

            if ( rs.next() )  {
                serviceApplicationDTO = new ServiceApplicationDTO() ;
                serviceApplicationDTO.setE164(Str.CheckNullString(rs.getString(1)));
                serviceApplicationDTO.setServiceNo(rs.getInt(2));
                serviceApplicationDTO.setOptions(rs.getInt(3));
            }
        } catch(Exception e) {
            e.printStackTrace();
        } finally {
            try {
                if (rs != null) rs.close();
            } catch(Exception e) { e.printStackTrace(); }
        }
        return serviceApplicationDTO;
    }

    public boolean insert ( QueryStatement statement, ServiceApplicationDTO serviceApplicationDTO  ) {
        String queryString = "";
        int count = 0;
        try {
            if (statement == null) {
                return false;
            }

            queryString =   " INSERT INTO Table_ServiceApplication ";
            queryString += " ( E164, ServiceNo, Options ) ";
            queryString += " VALUES (" ;

            queryString += " '"+serviceApplicationDTO.getE164()+"', ";
            queryString += " "+serviceApplicationDTO.getServiceNo()+", ";
            queryString += " "+serviceApplicationDTO.getOptions()+") ";

            System.out.println(queryString) ;
            count = statement.executeUpdate(queryString);
        } catch (Exception e) {
            e.printStackTrace();
            return false;
        }
        return true ;
    }

    public boolean update( QueryStatement statement, ServiceApplicationDTO serviceApplicationDTO  ) {
        String queryString = "";
        int count = 0;
        try {
            if (statement == null) {
                return false;
            }

            queryString = " UPDATE Table_ServiceApplication SET ";

            queryString += " Options = "+ serviceApplicationDTO.getOptions()+" ";
            queryString += " Where E164 = '" + serviceApplicationDTO.getE164() + "' ";
            queryString += " AND ServiceNo = " + serviceApplicationDTO.getServiceNo() + " " ;

            count = statement.executeUpdate(queryString);
            System.out.println(queryString) ;
        } catch (Exception e) {
            e.printStackTrace();
            return false;
        }
        return true ;
    }


    public boolean deleteE164( QueryStatement statement,  String strE164) {
        String queryString = "";
        int count = 0;
        try {
            if (statement == null) {
                return false;
            }
            queryString = " DELETE FROM Table_ServiceApplication WHERE E164 = '" + strE164+ "' " ;

            count = statement.executeUpdate(queryString);
            System.out.println(queryString) ;
        } catch (Exception e) {
            e.printStackTrace();
            return false;
        }
        return true ;
    }

    public boolean delete( QueryStatement statement,  ServiceApplicationDTO serviceApplicationDTO) {
        String queryString = "";
        int count = 0;
        try {
            if (statement == null) {
                return false;
            }
            queryString = " DELETE FROM Table_ServiceApplication WHERE E164 = '" + serviceApplicationDTO.getE164()+ "' " ;
            queryString += " AND ServiceNo = " + serviceApplicationDTO.getServiceNo() + " " ;

            count = statement.executeUpdate(queryString);
            System.out.println(queryString) ;
        } catch (Exception e) {
            e.printStackTrace();
            return false;
        }
        return true ;
    }


}
