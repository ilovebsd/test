public class Web {

	public static String GetShortString(String str,int byteSize, String tail){

		int rSize =0;
		int len = 0;
		if(str.getBytes().length > byteSize){
			for(; rSize < str.length(); rSize++){
				if(str.charAt(rSize) > 0x007F)
				    len +=2;
				else
					len++;
				if(len > byteSize)
					break;
			}
			str = str.substring(0,rSize)+ tail;
		}
		return str;
	}
}
				
				
				
		
