package com.acromate.util;

import java.lang.reflect.*;
/**
 *
 * @author 아크로메이트 기술연구소
 * @version 1.0.0
 */
public class Reflect {

    private Logger log = Logger.getLogger(this.getClass());
    /** Creates a new instance of Reflect */
    public Reflect() {
    }

    /**
     *
     * @return
     */
    public Object getNewInstance(String name) {
        Constructor contructor;
        Object object = null;

        try {
            Class cl = Class.forName(name);
            object = cl.newInstance();
        }catch(InstantiationException ex) {
            log.error("exception occurred > ", ex);
            return object;
        }catch(ClassNotFoundException ex) {
            log.error("exception occurred > ", ex);
            return object;
        }catch(IllegalAccessException ex) {
            log.error("exception occurred > ", ex);
            return object;
        }
        return object;
    }

    /**
     *
     * @param name
     * @param args
     * @return
     */
    public Object getNewInstance(String name, Object args) {

        Constructor ctor;
        Object object = null;

        try {
            Class[] argsClass = new Class[] {args.getClass().getSuperclass()};
            Object[] ctorargs = new Object[] {args};

            Class c = Class.forName(name);
            ctor = c.getConstructor(argsClass);
            object = ctor.newInstance(ctorargs);
        }catch(InstantiationException ex) {
            log.error("exception occurred > ", ex);
            return object;
        }catch(ClassNotFoundException ex) {
            log.error("exception occurred > ", ex);
            return object;
        }catch(IllegalAccessException ex) {
            log.error("exception occurred > ", ex);
            return object;
        }catch (IllegalArgumentException ex) {
            log.error("exception occurred > ", ex);
            return object;
        }catch (InvocationTargetException ex) {
            log.error("exception occurred > ", ex);
            return object;
        }catch(NoSuchMethodException ex) {
            log.error("exception occurred > ", ex);
            return object;
        }
        return object;
    }

    public Object getNewInstance(String name, Object arg1, Object arg2) {

        Constructor ctor;
        Object object = null;

        try {
            Class[] argsClass = new Class[] {arg1.getClass(),
                                             arg2.getClass().getSuperclass() };
            Object[] ctorargs = new Object[] {arg1, arg2};

            Class c = Class.forName(name);
            ctor = c.getConstructor(argsClass);
            object = ctor.newInstance(ctorargs);
        }catch(InstantiationException ex) {
            log.error("getNewInstance  Error ", ex);
            return object;
        }catch(ClassNotFoundException ex) {
            log.error("getNewInstance  Error ", ex);
            return object;
        }catch(IllegalAccessException ex) {
            log.error("getNewInstance  Error ", ex);
            return object;
        }catch (IllegalArgumentException ex) {
            log.error("getNewInstance  Error ", ex);
            return object;
        }catch (InvocationTargetException ex) {
            log.error("getNewInstance  Error ", ex);
            return object;
        }catch(NoSuchMethodException ex) {
            log.error("getNewInstance  Error ", ex);
            return object;
        }
        return object;
    }

    public Object getNewInstance(String name, Object arg1, Object arg2, Object arg3) {

        Constructor ctor;
        Object object = null;

        try {
            Class[] argsClass = new Class[] {arg1.getClass(),
                                             arg2.getClass().getSuperclass(),
                                             arg3.getClass()};
            Object[] ctorargs = new Object[] {arg1, arg2, arg3};

            Class c = Class.forName(name);
            ctor = c.getConstructor(argsClass);
            object = ctor.newInstance(ctorargs);
        }catch(InstantiationException ex) {
            log.error("getNewInstance  Error ", ex);
            return object;
        }catch(ClassNotFoundException ex) {
            log.error("getNewInstance  Error ", ex);
            return object;
        }catch(IllegalAccessException ex) {
            log.error("getNewInstance  Error ", ex);
            return object;
        }catch (IllegalArgumentException ex) {
            log.error("getNewInstance  Error ", ex);
            return object;
        }catch (InvocationTargetException ex) {
            log.error("getNewInstance  Error ", ex);
            return object;
        }catch(NoSuchMethodException ex) {
            log.error("getNewInstance  Error ", ex);
            return object;
        }
        return object;
    }
}
