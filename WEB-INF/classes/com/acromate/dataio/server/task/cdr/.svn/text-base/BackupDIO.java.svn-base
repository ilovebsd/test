package com.acromate.dataio.server.task.cdr ;

import com.acromate.util.Logger;
import com.acromate.data.DataIO;
import com.acromate.data.code.AppCode;
import com.acromate.dataio.server.task.TaskDIO;
import com.acromate.util.Str;

public class BackupDIO extends TaskDIO {
    private Logger log = Logger.getLogger(this.getClass());

    private int    errorcode;
    private StringBuilder dir = new StringBuilder();

    public String getDir() { return dir.toString() ; }
    public void   setDir( String dir ) {
        this.dir.delete(0,this.dir.length());
        this.dir.append(dir) ;
    }


    protected int setFieldData(String field, String value) {
        StringBuilder temp = new StringBuilder(field.toLowerCase());
        if(compareFieldID(temp, "dir".toLowerCase()) == true) {
            return setString(dir, value);
        }
        int result = super.setFieldData(field, value);
        if (result != AppCode.ERR_NOERROR) log.error("BackupDIO - Not founded field :" + field);
        return result;
    }

    protected int getFieldData(String field, Index idx, StringBuilder value) {
        boolean resultVal = false;
        StringBuilder fldAlias;
        if(field != null && !field.equals("")) resultVal = true;
        if(field == null) {
            fldAlias = new StringBuilder(); fldAlias.append("");
        } else {
           fldAlias  = new StringBuilder(); fldAlias.append(field);
        }
        if(compareFieldID(fldAlias, "dir", idx, value) == true) {
            errorcode = getString(dir.toString(), value, !resultVal);
            if(resultVal || errorcode < 0) return errorcode;
        }
        return super.getFieldData(field, idx, value);
    }
}

