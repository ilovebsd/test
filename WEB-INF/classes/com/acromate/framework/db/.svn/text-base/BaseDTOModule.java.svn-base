package com.acromate.framework.db;

import java.util.ArrayList;

import com.acromate.framework.frame.TaskModule;

public abstract class BaseDTOModule extends TaskModule{
	public BaseDTOModule(){}
	public BaseDTOModule(String pModuleName){
		super(pModuleName);
	}
	public abstract String toInsertQuery();
	public abstract String toUpdateQuery();
	public abstract String toDeleteQuery();
	public String getDTOKey(){return "";}
	public String[] getField(){
		java.lang.reflect.Field temp[] =this.getClass().getDeclaredFields();
		String name[] = null;
		if(temp != null){
			name = new String[temp.length] ;
			for( int i = 0 ; i < temp.length ;i++){
				name[i] = temp[i].getName();
			}
		}
		return name;
	}
	public String changeDate(String date,String dbType){
		if(date == null || "".equals(date)) return "null";
		return "acro_toDate('"+date+"','"+dbType+"')";
	}
//	///Please, This Method is Only Used in DAO's Module
//	public abstract void doDefaultChangedFlag();
}
