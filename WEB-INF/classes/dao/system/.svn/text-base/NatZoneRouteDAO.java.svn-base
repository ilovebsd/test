public class NatZoneRouteDAO {

    public NatZoneRouteDAO() {}
    
    public int insert(DataStatement stmt, NatZoneRouteDTO natZoneRouteDTO) {

        ResultSet rs = null;
        int nResult = 0;

        try {            
            if (stmt != null) {
            	// Transaction 시작
            	stmt.stxTransaction();            	
            	
                String sql = "\n INSERT INTO table_trroute(InZone, OutZone, ServiceFlag, TrType, TrID) values(" ;
            	sql = sql + "\n '" + natZoneRouteDTO.getInzone()    	+ "' , " ;            
            	sql = sql + "\n '" + natZoneRouteDTO.getOutzone()		+ "' , " ;
            	sql = sql + "\n  " + natZoneRouteDTO.getServiceflag()	+ "  , " ;
            	sql = sql + "\n  " + natZoneRouteDTO.getTrtype()		+ "  , " ;
            	sql = sql + "\n '" + natZoneRouteDTO.getTrid()  		+ "'  " ;
            	sql = sql + ") ";
                System.out.println("insert--->"+sql);
                                        
                nResult = stmt.executeUpdate(sql);
                if (nResult >= 1)
                    System.out.println("입력 성공");
                else
                    System.out.println("입력 실패");
                
                // Transaction 종료
                stmt.endTransaction(true);			// commit 처리
                // ======================================================================
                
            } else
                System.out.println("데이터베이스에 연결할 수 없습니다.");
        } catch (Exception e) {
        	// Transaction  Rollback 처리
        	stmt.endTransaction(false);		// rollback 처리
        	
        	e.printStackTrace();
        }
        
        return nResult;
    }

