package bizportal.nasacti.ipivr.common;

public class FileNameChecker {
	private FileNameChecker() {
	}

	public synchronized static boolean isValidFileName(String strFileName) {
		boolean bRtn = true;
		for(int i=0; i < strFileName.length(); i++) {
			char c = strFileName.charAt(i);
			if(c == '0' || (c >= '1' && c <= '9') || (c >= 'a' && c <= 'z') || (c >= 'A' && c <= 'Z') || c == '-' || c == '_' || c == '.' || c == '(' || c == ')' )
				bRtn = true;
			else
				return false;
		}
		return bRtn;
	}
}
