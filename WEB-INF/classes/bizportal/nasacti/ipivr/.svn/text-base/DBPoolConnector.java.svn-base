package bizportal.nasacti.ipivr;

import javax.naming.Context;
import javax.sql.DataSource;
import java.sql.Connection;
import javax.naming.InitialContext;
import bizportal.nasacti.ipivr.common.IpivrConfig;

public class DBPoolConnector {
	protected String strDataSourceName = "jdbc/ipivr";
	protected Connection getConnection() throws Exception {
		Connection conn = null;
		try {
			Context initCtx = new InitialContext();
			Context envCtx = (Context)initCtx.lookup("java:comp/env");
			DataSource ds = (DataSource)envCtx.lookup(strDataSourceName);
			conn = ds.getConnection();
		} catch (Exception e) {
			e.printStackTrace();
		}

		return conn;
	}
}
