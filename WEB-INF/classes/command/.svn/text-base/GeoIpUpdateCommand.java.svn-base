package command;

import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import business.LogHistory;

import com.acromate.util.Str;
import dao.system.GeoIpDAO;

public class GeoIpUpdateCommand implements Command {
	public String execute(HttpServletRequest req, HttpServletResponse res) {
		String 	forwardingPage 	= "";				
		String 	resStr 			= "";
		
		try {
			String 	startIp 	= new String(Str.CheckNullString(req.getParameter("hiStartIp")).getBytes("8859_1"), "euc-kr");
			String 	endIp 		= new String(Str.CheckNullString(req.getParameter("hiEndIp")).getBytes("8859_1"), "euc-kr");
			String 	note		= new String(Str.CheckNullString(req.getParameter("hiNote")).getBytes("8859_1"), "euc-kr");			//
			
			String 	userID		= new String(req.getParameter("hiUserID").getBytes("8859_1"), "euc-kr");		// 로그인 ID
			
			resStr = "geoIpList.jsp";
			
			GeoIpDAO dao 	= new GeoIpDAO();
			int insertResult = dao.geoIpUpdate(startIp, endIp, note);
			
			if(insertResult==1){
				// ############### LogHistory 처리  ###############
				String		strIp2		= req.getRemoteAddr();
				LogHistory	logHistory 	= new LogHistory();
				int int_result = logHistory.LogHistorySave(userID+"|90|GeoIP 수정 ("+startIp+"-"+endIp+")|3|"+strIp2);
				// ##############################################

				res.sendRedirect("/bizportal/system/"+resStr);
			}else{
				res.sendRedirect("/bizportal/errorMessage.jsp");
			}

		} catch (Exception e) {
			try{
				res.sendRedirect("/bizportal/errorMessage.jsp");
			} catch (Exception ee) {
			}
			e.printStackTrace();
		} finally {

		}		
		return forwardingPage;
	}
	
}
