package command;

import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;
import javax.servlet.http.HttpSession;

import acromate.ConnectionManager;
import acromate.common.StaticString;
import com.acromate.driver.db.DataStatement;
import com.acromate.util.Str;
import waf.BaseEntity;
import waf.SessionManager;
import webuser.ServerLogin;
import dto.AddrBookGroupDTO;
import dto.SubscriberInfoDTO;
import dao.AddrBookGroupDAO;

public class PublicAddrBookGroupEditCommand implements Command {
	public String execute(HttpServletRequest req, HttpServletResponse res) {
		String forwardingPage = "";
		AddrBookGroupDTO dto = new AddrBookGroupDTO();
		DataStatement stmt = null;
		String resStr = "";
		try {
			String 	ownerID			= new String(Str.CheckNullString(req.getParameter("hiOwnerID")).getBytes("8859_1"), "euc-kr");	// 작성자ID
			String 	groupID			= new String(Str.CheckNullString(req.getParameter("hiGroupID")));								// 그룹ID
			String 	name			= new String(Str.CheckNullString(req.getParameter("hiName")).getBytes("8859_1"), "euc-kr");		// 이름
			String 	memo			= new String(Str.CheckNullString(req.getParameter("hiMemo")).getBytes("8859_1"), "euc-kr");		// 메모
			String 	common			= new String(Str.CheckNullString(req.getParameter("hiCommon")).getBytes("8859_1"), "euc-kr");			// 공유여부

			if("1".equals(common)){
				resStr = "userGroupList.jsp";
			}else if("2".equals(common)){
				resStr = "publicGroupList.jsp";
			}
			
			SessionManager manager = SessionManager.getInstance();
			if (manager.isLogin(req)) {
				HttpSession hs = req.getSession();
				String id = hs.getId();
				BaseEntity entity = manager.getBaseEntity(id);	
				
				SubscriberInfoDTO scDTO = entity.getScDtoAttribute("scDTO");
				stmt = ConnectionManager.allocStatement("SSW");

				dto.setOwnerID(ownerID);
				dto.setGroupID(Integer.parseInt(groupID));
				dto.setName(name);
				dto.setMemo(memo);
				
				AddrBookGroupDAO dao = new AddrBookGroupDAO();
				int updateResult = dao.update(stmt,dto);
				
				res.sendRedirect("/bizportal/address/"+resStr);
			} 
			else
				res.sendRedirect("/bizportal/address/"+resStr+"?session=0");
		
		} catch (Exception e) {
			try{
				res.sendRedirect("/bizportal/address/"+resStr+"?result=-1");
			} catch (Exception ee) {
			}

			e.printStackTrace();
		} finally {
			//할당받은 DataStatement 객체는 반납
			if (stmt != null ) ConnectionManager.freeStatement(stmt);
		}		
		return forwardingPage;
	}
}
