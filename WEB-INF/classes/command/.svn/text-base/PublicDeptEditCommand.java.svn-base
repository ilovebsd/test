package command;

import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;
import javax.servlet.http.HttpSession;

import acromate.ConnectionManager;
import acromate.common.StaticString;
import com.acromate.driver.db.DataStatement;
import com.acromate.util.Str;
import waf.BaseEntity;
import waf.SessionManager;
import webuser.ServerLogin;
import dto.DeptDTO;
import dto.SubscriberInfoDTO;
import dao.buddy.DeptDAO;

public class PublicDeptEditCommand implements Command {
	public String execute(HttpServletRequest req, HttpServletResponse res) {
		String forwardingPage = "";
		DeptDTO dto = new DeptDTO();
		DataStatement stmt = null;
		try {
			String 	deptid    		= new String(Str.CheckNullString(req.getParameter("hiDeptid")).getBytes("8859_1"), "euc-kr");	
			String 	parentid  		= new String(Str.CheckNullString(req.getParameter("hiParentid")).getBytes("8859_1"), "euc-kr");
			String 	deptname  		= new String(Str.CheckNullString(req.getParameter("hiDeptname")).getBytes("8859_1"), "euc-kr");
			String 	keynumber 		= new String(Str.CheckNullString(req.getParameter("hiKeynumber")).getBytes("8859_1"), "euc-kr");
			String 	deptgubun 		= new String(Str.CheckNullString(req.getParameter("hiDeptgubun")).getBytes("8859_1"), "euc-kr");
			String 	keynumberType 	= new String(Str.CheckNullString(req.getParameter("hiKeynumberType")).getBytes("8859_1"), "euc-kr");
			
			SessionManager manager = SessionManager.getInstance();
			if (manager.isLogin(req)) {
				HttpSession hs = req.getSession();
				String id = hs.getId();
				BaseEntity entity = manager.getBaseEntity(id);	
				
				SubscriberInfoDTO scDTO = entity.getScDtoAttribute("scDTO");
				stmt = ConnectionManager.allocStatement("SSW");

				dto.setDeptID(Integer.parseInt(deptid));
				dto.setDeptName(deptname);
				dto.setKeyNumber(keynumber);
				
				DeptDAO dao = new DeptDAO();
				int updateResult = dao.update(stmt,dto, keynumberType);
				
				res.sendRedirect("/bizportal/buddy/deptList.jsp");
			} 
			else
				res.sendRedirect("/bizportal/buddy/deptList.jsp?session=0");
		
		} catch (Exception e) {
			try{
				res.sendRedirect("/bizportal/buddy/deptList.jsp?result=-1");
			} catch (Exception ee) {
			}

			e.printStackTrace();
		} finally {
			//ÇÒ´ç¹ÞÀº DataStatement °´Ã¼´Â ¹Ý³³
			if (stmt != null ) ConnectionManager.freeStatement(stmt);
		}		
		return forwardingPage;
	}
}
