package command;

import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;
import javax.servlet.http.HttpSession;

import acromate.ConnectionManager;
import acromate.common.StaticString;
import com.acromate.driver.db.DataStatement;
import com.acromate.util.Str;
import waf.BaseEntity;
import waf.SessionManager;
import webuser.ServerLogin;
import dto.SubscriberInfoDTO;
import dao.addition.AlarmServiceDAO;
import acromate.common.util.StringUtil;
import business.LogHistory;

public class AlarmDeleteCommand implements Command {
	public String execute(HttpServletRequest req, HttpServletResponse res) {
		String forwardingPage = "";
//		DataStatement stmt = null;
		String resStr = "";

		// 서버로부터 DataStatement 객체를 할당
		DataStatement 	stmt 			= ConnectionManager.allocStatement("SSW");

        try {
			String 	deleteStr 	= new String(Str.CheckNullString(req.getParameter("deleteStr")).getBytes("8859_1"), "euc-kr");

			String 	userID		= new String(req.getParameter("hiUserID").getBytes("8859_1"), "euc-kr");		// 로그인 ID
			
			resStr = "addServiceAlarmList.jsp";
						
			AlarmServiceDAO alarmServiceDAO = new AlarmServiceDAO();
			String[] 		blockStr 		= StringUtil.getParser(deleteStr, "");
			String			e164 			= "";
			boolean 		returnVal 		= false;
			
			for(int k=0; k < blockStr.length; k++){
				e164   		= blockStr[k];

				int deleteResult = alarmServiceDAO.deleteAll(stmt, e164);
				returnVal = true;

				if(returnVal==true){
					// ############### LogHistory 처리  ###############
					String		strIp		= req.getRemoteAddr();
					LogHistory	logHistory 	= new LogHistory();
					int int_result = logHistory.LogHistorySave(userID+"|83|지정시간 통보("+e164+"번)|2|"+strIp);
					// ##############################################
				}
			}
			
			if(returnVal==true){
				res.sendRedirect("/bizportal/useconfig/"+resStr);
			}else{
				res.sendRedirect("/bizportal/errorMessage.jsp");
			}
			
		} catch (Exception e) {
			System.out.println("에러발생 .......");
			try{
				res.sendRedirect("/bizportal/errorMessage.jsp");
			} catch (Exception ee) {
			}			
			e.printStackTrace();
		} finally {
			//할당받은 DataStatement 객체는 반납
			if (stmt != null ) ConnectionManager.freeStatement(stmt);
		}		
		return forwardingPage;
	}
}
