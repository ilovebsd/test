package command;

import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import business.LogHistory;

import com.acromate.util.Str;
import system.SystemConfigSet;
import framework.Shell.LinuxShell;

public class BlackIpInsertCommand implements Command {
	public String execute(HttpServletRequest req, HttpServletResponse res) {
		String 	forwardingPage 	= "";				
		String 	resStr 			= "";

		SystemConfigSet systemConfig 	= new SystemConfigSet();
		LinuxShell 		linuxShell 		= new LinuxShell();
		
		try {
			String 	strIp 			= new String(Str.CheckNullString(req.getParameter("hiIp")).getBytes("8859_1"), "euc-kr");			
			String 	userID			= new String(req.getParameter("hiUserID").getBytes("8859_1"), "euc-kr");		// 로그인 ID
			
			resStr = "blackIpList.jsp";
			
        	String osType3 		= systemConfig.osChk();
        	String tmpCommand 	= "/sbin/pfctl -t black_ip -T add "+strIp;
        	if("uix".equals(osType3)){
        		linuxShell.runShell(tmpCommand);
        		System.out.println("######## uix Black IP Add :"+"/sbin/pfctl -t black_ip -T add "+strIp);
        	}else{
        		System.out.println("######## Windows Black IP Add :"+"/sbin/pfctl -t black_ip -T add "+strIp);
        	}
        	
			// ############### LogHistory 처리  ###############
			String		strIp2		= req.getRemoteAddr();
			LogHistory	logHistory 	= new LogHistory();
			int int_result = logHistory.LogHistorySave(userID+"|90|ACL [Black IP] ("+strIp+")|1|"+strIp2);
			// ##############################################

			res.sendRedirect("/bizportal/system/"+resStr);

		} catch (Exception e) {
			try{
				res.sendRedirect("/bizportal/errorMessage.jsp");
			} catch (Exception ee) {
			}
			e.printStackTrace();
		} finally {

		}		
		return forwardingPage;
	}
	
}
