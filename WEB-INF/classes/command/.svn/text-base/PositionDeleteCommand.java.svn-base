package command;

import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;
import javax.servlet.http.HttpSession;

import acromate.ConnectionManager;
import acromate.common.StaticString;
import com.acromate.driver.db.DataStatement;
import com.acromate.util.Str;
import waf.BaseEntity;
import waf.SessionManager;
import webuser.ServerLogin;
import dto.PositionDTO;
import dto.SubscriberInfoDTO;
import dao.buddy.PositionDAO;
import acromate.common.util.StringUtil;

public class PositionDeleteCommand implements Command {
	public String execute(HttpServletRequest req, HttpServletResponse res) {
		String forwardingPage = "";
		DataStatement stmt = null;
		String resStr = "";

		try {
			String 	deleteStr = new String(Str.CheckNullString(req.getParameter("deleteStr")).getBytes("8859_1"), "euc-kr");

			resStr = "positionList.jsp";
			
			SessionManager manager = SessionManager.getInstance();
			if (manager.isLogin(req)) {
				HttpSession hs = req.getSession();
				String id = hs.getId();
				BaseEntity entity = manager.getBaseEntity(id);	
				
				SubscriberInfoDTO scDTO = entity.getScDtoAttribute("scDTO");
				
				stmt = ConnectionManager.allocStatement("SSW");

				// ∆Æ∑£¿Ëº« Ω√¿€
				stmt.stxTransaction();
				
				String[] dataStr = StringUtil.getParser(deleteStr, "|");
				
				if(dataStr != null){
					for(int i=0; i < dataStr.length; i++){
						PositionDAO dao = new PositionDAO();
						int updateResult = dao.delete(stmt, dataStr[i]);
					}
					
					PositionDAO dao = new PositionDAO();
					int sortResult = dao.updateSort(stmt);
				}
								
				if (stmt != null)
					stmt.endTransaction(true);
				//forwardingPage = "/bizportal/publicAddrList.jsp?group=" + nGroupId + "&result=" + Integer.toString(updateResult);
				res.sendRedirect("/bizportal/buddy/"+resStr);
			} 
			else
				res.sendRedirect("/bizportal/buddy/"+resStr+"?session=0");
//				forwardingPage = "/address/publicAddrList.jsp?session=0";
		
		} catch (Exception e) {
			if (stmt != null)
				stmt.endTransaction(false);
			try{
				res.sendRedirect("/bizportal/buddy/"+resStr+"?result=-1");
			} catch (Exception ee) {
			}
//			forwardingPage = "/address/publicAddrList.jsp?result=-1" ;
			
			//ServerLogin.getServerLogin().login();

			e.printStackTrace();
		} finally {
			//«“¥Áπﬁ¿∫ DataStatement ∞¥√º¥¬ π›≥≥
			if (stmt != null ) ConnectionManager.freeStatement(stmt);
		}
		return forwardingPage;
	}
}
