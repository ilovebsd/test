package command;

import java.sql.Statement;

import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;
import javax.servlet.http.HttpSession;

import acromate.ConnectionManager;
import acromate.common.StaticString;
import com.acromate.driver.db.DataStatement;
import com.acromate.util.Str;
import waf.BaseEntity;
import waf.SessionManager;
import webuser.ServerLogin;
import dto.system.SystemClusterDTO;
import dao.system.SystemClusterDAO;

public class EmsClusterSaveCommand implements Command {
	public String execute(HttpServletRequest req, HttpServletResponse res) {
		Statement 	stmt 			= null;
		String 			forwardingPage 	= "";				
		String 			resStr 			= "";
		try {
			String 	groupid 		= new String(Str.CheckNullString(req.getParameter("hiGroupid")).getBytes("8859_1"), "euc-kr");			//
			String 	clusterid 		= new String(Str.CheckNullString(req.getParameter("hiClusterid")).getBytes("8859_1"), "euc-kr");		//
			String 	clustername		= new String(Str.CheckNullString(req.getParameter("hiClusterName")).getBytes("8859_1"), "euc-kr");		//
			String 	clustertype		= new String(Str.CheckNullString(req.getParameter("hiClusterType")).getBytes("8859_1"), "euc-kr");		// 
			
			resStr = "emsList.jsp";

			SessionManager manager = SessionManager.getInstance();
			if (manager.isLogin(req)) {
				HttpSession hs = req.getSession();
				String id = hs.getId();
				BaseEntity entity = manager.getBaseEntity(id);	
				
				SystemClusterDTO dto = new SystemClusterDTO();
				dto.setSysgroupid(groupid);
				dto.setClusterid(clusterid);
				dto.setClustername(clustername);
				dto.setServicetype("HW");
				dto.setClustertype(Integer.parseInt(clustertype));
				
				stmt = ConnectionManager.allocStatementDirect("EMS");
								
				SystemClusterDAO 	dao = new SystemClusterDAO();
				int insertResult 	= dao.insert(stmt,dto);
				
				res.sendRedirect("/bizportal/system/"+resStr);
			} 
			else
				res.sendRedirect("/bizportal/system/"+resStr+"?session=0");
		
		} catch (Exception e) {
			try{
				res.sendRedirect("/bizportal/errorMessage.jsp");
			} catch (Exception ee) {
			}
			e.printStackTrace();
		} finally {
			//ÇÒ´ç¹ÞÀº DataStatement °´Ã¼´Â ¹Ý³³
			if (stmt != null ) ConnectionManager.closeStatementDirect(stmt);
		}		
		return forwardingPage;
	}
}
