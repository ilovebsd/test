public class FtpStartCommand implements Command {
	public String execute(HttpServletRequest req, HttpServletResponse res) {
		String forwardingPage = "";
		
		SystemConfigSet systemConfig 	= new SystemConfigSet();
		LinuxShell 		linuxShell 		= new LinuxShell();
        int 			nGroupId 		= 0;
        boolean 		returnVal 		= false;
        try {
        	String 	userID			= new String(req.getParameter("hiUserID").getBytes("8859_1"), "euc-kr");		// 로그인 ID
        	
        	String osType3 = systemConfig.osChk();
        	if("uix".equals(osType3)){
        		linuxShell.runShell("/data/acromate_home/script/ipcs_backup_ftp");
        		
        		System.out.println("FTP Start : /data/acromate_home/script/ipcs_backup_ftp");
        	}else{
        		System.out.println("FTP : /data/acromate_home/script/ipcs_backup_ftp");
        	}
			
			// ############### LogHistory 처리  ###############
			String		strIp		= req.getRemoteAddr();
			LogHistory	logHistory 	= new LogHistory();
			int int_result = logHistory.LogHistorySave(userID+"|86|FTP 백업 실행|1|"+strIp);
			// ##############################################

			System.out.println("FTP 백업 실행 성공 .......");
			res.sendRedirect("/bizportal/system/updateModule.jsp");

		} catch (Exception e) {
			System.out.println("IPCS 에러발생 .......");
			forwardingPage = "/bizportal/system/updateModule.jsp" ;
			
			e.printStackTrace();
		}		
		return forwardingPage;
	}
}
